---
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | iLoveIMG Clone</title>
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Libraries for Image Processing -->
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/browser-image-compression@2.0.2/dist/browser-image-compression.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet">

    <style>
        :root { --primary-blue: #4B90FF; --dark-bg: #212529; }
        body { font-family: 'Inter', sans-serif; padding-top: 70px; }

        /* --- Professional Navbar --- */
        .navbar { background: #fff; border-bottom: 1px solid #eaeaea; height: 70px; }
        .navbar-brand { font-weight: 800; color: #333 !important; font-size: 1.5rem; }
        
        .nav-link { 
            color: #333 !important; 
            font-weight: 600; 
            font-size: 0.95rem; 
            padding: 10px 15px !important;
            transition: 0.2s;
        }
        .nav-link:hover { color: var(--primary-blue) !important; }

        /* Hamburger Icon (GeneratePress Style) */
        .navbar-toggler { border: none; padding: 0; }
        .navbar-toggler:focus { shadow: none; outline: none; box-shadow: none; }
        .hamburger-icon { width: 25px; height: 2px; background: #333; display: block; position: relative; }
        .hamburger-icon::before, .hamburger-icon::after { content: ''; width: 25px; height: 2px; background: #333; position: absolute; left: 0; transition: 0.3s; }
        .hamburger-icon::before { top: -8px; }
        .hamburger-icon::after { top: 8px; }

        @media (max-width: 991px) {
            .navbar-collapse { background: #fff; padding: 20px; border-bottom: 1px solid #eee; }
        }

        footer { background: #1a1c1e; color: #999; padding: 40px 0; font-size: 0.85rem; }
        .footer-links a { color: #999; text-decoration: none; margin: 0 10px; }
    </style>

</head>
<body>
   <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">ZYN<span class="text-primary">TOOL</span></a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainMenu">
                <span class="hamburger-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainMenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/compress-image">Compress</a></li>
                    <li class="nav-item"><a class="nav-link" href="/resize-image">Resize</a></li>
                    <li class="nav-item"><a class="nav-link" href="/crop-image">Crop</a></li>
                    <li class="nav-item"><a class="nav-link" href="/convert-to-jpg">Convert</a></li>
                    <li class="nav-item"><a class="nav-link" href="/remove-background">Remove BG</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main><slot /></main>

    <footer>
        <div class="container text-center">
            <ul class="footer-links mb-3">
                <li><a href="/about">About</a></li>
                <li><a href="/privacy">Privacy</a></li>
            </ul>
            <p>© 2025 ZynTool ® - Your Image Editor</p>
        </div>
    </footer>

    <!-- Bootstrap JS for Dropdowns -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
