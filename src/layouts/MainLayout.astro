---
const { title = "ZynTool", description = "Fast, Private Image Tools" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- External Assets -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style is:global>
        :root { --primary-brand: #4f46e5; --bg-gray: #f3f3f7; }
        
        body { 
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--bg-gray) !important;
            color: #33333b;
            padding-top: 70px;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main { flex: 1; }

        /* FIXED NAV LOGIC */
        .main-nav {
            position: fixed; top: 0; left: 0; right: 0; height: 70px;
            background: #fff; border-bottom: 1px solid #e0e0e6;
            display: flex; align-items: center; z-index: 1000;
        }
        .logo { font-weight: 800; font-size: 1.4rem; color: #111; text-decoration: none; letter-spacing: -0.5px; }
        .logo span { color: var(--primary-brand); }

        /* MOBILE MENU OVERLAY */
        #mobileMenu {
            position: fixed; top: 0; left: 0; width: 100%; height: 100vh;
            background: #fff; z-index: 2000; display: none; flex-direction: column; padding: 25px;
        }
        #mobileMenu.active { display: flex; }
        .mobile-link { font-size: 1.3rem; font-weight: 700; color: #111; text-decoration: none; padding: 15px 0; border-bottom: 1px solid #f3f4f6; }

        footer { background: #1a1c1e; color: #94a3b8; padding: 60px 0 40px; margin-top: 50px; }
        .footer-link { color: #cbd5e1; text-decoration: none; font-size: 0.95rem; font-weight: 600; }
    </style>
</head>
<body>
    <header class="main-nav">
        <div class="container d-flex justify-content-between align-items-center">
            <a href="/" class="logo">ZYN<span>TOOL</span></a>
            <nav class="d-none d-lg-flex gap-4">
                <a href="/compress-image" class="text-dark fw-bold text-decoration-none small text-uppercase">Compress</a>
                <a href="/resize-image" class="text-dark fw-bold text-decoration-none small text-uppercase">Resize</a>
                <a href="/crop-image" class="text-dark fw-bold text-decoration-none small text-uppercase">Crop</a>
            </nav>
            <button class="d-lg-none border-0 bg-transparent p-0" id="menuOpen">
                <i class="fa-solid fa-bars-staggered fs-3"></i>
            </button>
        </div>
    </header>

    <div id="mobileMenu">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <span class="logo">ZYN<span>TOOL</span></span>
            <button class="border-0 bg-transparent" id="menuClose"><i class="fa-solid fa-xmark fs-2"></i></button>
        </div>
        <a href="/" class="mobile-link">Home</a>
        <a href="/compress-image" class="mobile-link">Compress Image</a>
        <a href="/resize-image" class="mobile-link">Resize Image</a>
        <a href="/crop-image" class="mobile-link">Crop Image</a>
    </div>

    <main><slot /></main>

    <footer>
        <div class="container text-center">
            <div class="d-flex flex-column flex-md-row justify-content-center gap-4 mb-4">
                <a href="/about" class="footer-link">About Us</a>
                <a href="/privacy" class="footer-link">Privacy Policy</a>
                <a href="/compress-image" class="footer-link">Compress Image</a>
            </div>
            <p class="small opacity-50 m-0 border-top border-secondary pt-4">© 2025 ZynTool — Fast & Private</p>
        </div>
    </footer>

    <script is:inline>
        const openBtn = document.getElementById('menuOpen');
        const closeBtn = document.getElementById('menuClose');
        const menu = document.getElementById('mobileMenu');
        if(openBtn) openBtn.onclick = () => { menu.classList.add('active'); document.body.style.overflow = 'hidden'; }
        if(closeBtn) closeBtn.onclick = () => { menu.classList.remove('active'); document.body.style.overflow = 'auto'; }
    </script>
</body>
</html>
