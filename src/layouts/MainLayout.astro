                <!-- Mobile Close Button (Hidden on Desktop) -->
                <div class="mobile-menu-header d-lg-none">
                    <span class="menu-title">Menu</span>
                    <button class="close-menu" data-bs-toggle="collapse" data-bs-target="#mainMenu">
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                </div>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/compress-image">Compress</a></li>
                    <li class="nav-item"><a class="nav-link" href="/resize-image">Resize</a></li>
                    <li class="nav-item"><a class="nav-link" href="/crop-image">Crop</a></li>
                    <li class="nav-item"><a class="nav-link" href="/convert-to-jpg">Convert</a></li>
                    <li class="nav-item"><a class="nav-link" href="/remove-background">Remove BG</a></li>
                    <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main><slot /></main>

    <footer>
        <div class="container text-center">
            <ul class="footer-links">
                <li><a href="/about">About Us</a></li>
                <li><a href="/privacy">Privacy Policy</a></li>
                <li><a href="/terms">Terms of Service</a></li>
                <li><a href="/contact">Contact</a></li>
                 <li><a href="/compress-image">Compress Image</a></li>
    <li><a href="/resize-image">Resize Image</a></li>
    <li><a href="/remove-background">Remove BG</a></li>
    <li><a href="/image-to-pdf">Image to PDF</a></li>
            </ul>
            
            <div class="footer-copyright">
                <p> Copyright @ 2025 Zyntool</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS for Dropdowns -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script is:inline>
    // Listen for when the mobile menu opens/closes
    const menu = document.getElementById('mainMenu');
    
    menu.addEventListener('show.bs.collapse', function () {
        document.body.style.overflow = 'hidden'; // Stop scrolling
    });

    menu.addEventListener('hide.bs.collapse', function () {
        document.body.style.overflow = 'auto'; // Enable scrolling
    });
</script>
</body>
</html>
