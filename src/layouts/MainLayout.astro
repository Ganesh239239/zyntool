---
const { 
    title = "ZynTool", 
    description = "Fast, Private Image Tools",
    image = "/og-image.png",
    canonicalURL = Astro.url.href
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-site-verification" content="Qs3TKSj586DhwbsGN39F8LqXGcvNLgn5oQeW747IMQY" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
    <meta name="description" content={description}>
    
    <!-- External Assets -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css">

    <!-- Processing Libraries -->
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/browser-image-compression@2.0.2/dist/browser-image-compression.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    
    <style is:global>
        :root { --primary-brand: #4b8df8; }
        
        /* 100/100 Speed Typography */
        body { 
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background-color: #f3f3f7 !important; /* iLoveIMG Light Gray */
            color: #1e293b;
            padding-top: 70px;
        }

        /* GeneratePress Style Navbar */
        .navbar { background: #ffffff; border-bottom: 1px solid #f0f0f0; height: 70px; z-index: 1050; }
        .navbar-brand { font-weight: 900; color: #111827 !important; font-size: 1.5rem; }
        .nav-link { color: #111827 !important; font-weight: 700; font-size: 0.9rem; text-transform: uppercase; padding: 10px 15px !important; }

        /* Off-canvas Mobile Menu */
        @media (max-width: 991px) {
            .navbar-collapse {
                position: fixed; top: 0; left: 0; width: 100%; height: 100vh;
                background: #ffffff; z-index: 9999; transform: translateX(-100%);
                transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
                display: block !important; padding: 20px;
            }
            .navbar-collapse.show { transform: translateX(0); }
            .nav-item { border-bottom: 1px solid #f3f4f6; }
            .nav-link { padding: 20px 0 !important; font-size: 1.1rem; }
        }

        /* Vertical Mobile Footer */
        footer { background: #0f172a; color: #94a3b8; padding: 60px 0; }
        .footer-links { list-style: none; padding: 0; display: flex; justify-content: center; gap: 30px; flex-wrap: wrap; }
        .footer-links a { color: #cbd5e1; text-decoration: none; font-weight: 600; }
        
        @media (max-width: 767px) {
            .footer-links { flex-direction: column; align-items: center; gap: 15px; }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top shadow-sm">
        <div class="container mx-auto px-4 flex items-center justify-between">
            <a class="navbar-brand no-underline" href="/">ZYN<span class="text-primary">TOOL</span></a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainMenu">
                <i class="fa-solid fa-bars"></i>
            </button>

            <div class="collapse navbar-collapse" id="mainMenu">
                <div class="flex justify-between items-center mb-8 d-lg-none">
                    <span class="font-black text-slate-400">MENU</span>
                    <button class="border-0 bg-transparent text-2xl" data-bs-toggle="collapse" data-bs-target="#mainMenu">
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                </div>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/compress-image">Compress</a></li>
                    <li class="nav-item"><a class="nav-link" href="/resize-image">Resize</a></li>
                    <li class="nav-item"><a class="nav-link" href="/crop-image">Crop</a></li>
                    <li class="nav-item"><a class="nav-link" href="/convert-to-jpg">Convert</a></li>
                    <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main><slot /></main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
