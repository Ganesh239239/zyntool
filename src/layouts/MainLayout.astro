---
// SEO Props
const { title = "ZynTool", description = "Fast, Private Image Tools" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    
    <!-- External Assets -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style is:global>
        /* THE ILOVEIMG VIBE */
        :root { --ilove-blue: #4b8df8; --bg-gray: #f3f3f7; }
        
        body { 
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
            background-color: var(--bg-gray) !important;
            color: #33333b;
            margin: 0;
            padding-top: 70px; /* Space for sticky header */
        }

        /* STICKY NAVIGATION */
        .main-nav {
            position: fixed; top: 0; left: 0; right: 0; height: 70px;
            background: #fff; border-bottom: 1px solid #e0e0e6;
            display: flex; align-items: center; z-index: 1000;
        }
        .nav-container {
            width: 100%; max-width: 1200px; margin: 0 auto; padding: 0 20px;
            display: flex; justify-content: space-between; align-items: center;
        }
        .logo { font-weight: 900; font-size: 1.5rem; color: #111; text-decoration: none; }
        .logo span { color: var(--ilove-blue); }
        
        .nav-links { display: flex; gap: 20px; list-style: none; margin: 0; padding: 0; }
        .nav-links a { 
            text-decoration: none; color: #333; font-weight: 700; 
            font-size: 0.85rem; text-transform: uppercase; 
        }
        .nav-links a:hover { color: var(--ilove-blue); }

        /* FOOTER */
        .main-footer { background: #1a1c1e; color: #94a3b8; padding: 60px 0 40px; margin-top: 80px; }
        .footer-grid { max-width: 1200px; margin: 0 auto; padding: 0 20px; text-align: center; }
        .footer-list { display: flex; justify-content: center; gap: 30px; flex-wrap: wrap; list-style: none; padding: 0; margin-bottom: 30px; }
        .footer-list a { color: #cbd5e1; text-decoration: none; font-size: 0.9rem; font-weight: 600; }
        .footer-copy { font-size: 0.8rem; opacity: 0.5; border-top: 1px solid #2d3135; padding-top: 20px; }

        @media (max-width: 768px) {
            .nav-links { display: none; } /* Simplified for now */
        }
    </style>
</head>
<body>
    <header class="main-nav">
        <div class="nav-container">
            <a href="/" class="logo">ZYN<span>TOOL</span></a>
            <ul class="nav-links">
                <li><a href="/compress-image">Compress</a></li>
                <li><a href="/resize-image">Resize</a></li>
                <li><a href="/crop-image">Crop</a></li>
                <li><a href="/convert-to-jpg">Convert</a></li>
                <li><a href="/about">About</a></li>
            </ul>
            <div class="d-lg-none"><i class="fa-solid fa-bars fs-4"></i></div>
        </div>
    </header>

    <main><slot /></main>

    <footer class="main-footer">
        <div class="footer-grid">
            <ul class="footer-list">
                <li><a href="/about">About</a></li>
                <li><a href="/privacy">Privacy</a></li>
                <li><a href="/terms">Terms</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
            <div class="footer-copy">
                © 2025 ZynTool ® - Made for Privacy.
            </div>
        </div>
    </footer>
</body>
</html>
