---
// SEO Props
const { 
    title = "ZynTool - Free Online Image Editor", 
    description = "Compress, resize, crop and convert images online for free. Fast, secure, and no registration required.",
    image = "/og-image.png", // Path to your default share image
    canonicalURL = Astro.url.href
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="sitemap" href="/sitemap-index.xml" />
<meta name="google-site-verification" content="Qs3TKSj586DhwbsGN39F8LqXGcvNLgn5oQeW747IMQY" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title}>
    <meta name="description" content={description}>
    <link rel="canonical" href={canonicalURL}>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={Astro.url.href}>
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={new URL(image, Astro.url)}>

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content={Astro.url.href}>
    <meta property="twitter:title" content={title}>
    <meta property="twitter:description" content={description}>
    <meta property="twitter:image" content={new URL(image, Astro.url)}>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Libraries for Image Processing -->
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/browser-image-compression@2.0.2/dist/browser-image-compression.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/tesseract.js@5/dist/tesseract.min.js"></script>
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet">

    <style>
        :root { --primary-blue: #4B90FF; }
        body { font-family: 'Inter', sans-serif; padding-top: 70px; background: #fcfdfe; }

        /* --- Professional Navbar --- */
        .navbar { background: #fff; border-bottom: 1px solid #eaeaea; height: 70px; }
        .navbar-brand { font-weight: 800; color: #333 !important; font-size: 1.5rem; }
        
        .nav-link { 
            color: #333 !important; 
            font-weight: 600; 
            font-size: 0.95rem; 
            padding: 10px 15px !important;
            transition: 0.2s;
        }
        .nav-link:hover { color: var(--primary-blue) !important; }

        /* Hamburger Icon (GeneratePress Style) */
        .navbar-toggler { border: none; padding: 0; }
        .navbar-toggler:focus { shadow: none; outline: none; box-shadow: none; }
        .hamburger-icon { width: 25px; height: 2px; background: #333; display: block; position: relative; }
        .hamburger-icon::before, .hamburger-icon::after { content: ''; width: 25px; height: 2px; background: #333; position: absolute; left: 0; transition: 0.3s; }
        .hamburger-icon::before { top: -8px; }
        .hamburger-icon::after { top: 8px; }

        @media (max-width: 991px) {
            .navbar-collapse { background: #fff; padding: 20px; border-bottom: 1px solid #eee; }
        }

       /* --- FIXED FOOTER DESIGN --- */
    footer { 
        background-color: #1a1c1e; 
        color: #94a3b8; 
        padding: 60px 0 40px; 
        margin-top: auto; 
    }

    .footer-links { 
        list-style: none; /* Removes the dots */
        padding: 0;       /* Removes the left space */
        margin: 0 0 25px 0;
        display: flex; 
        justify-content: center; 
        gap: 30px;        /* Spacing between links */
    }

    .footer-links a { 
        color: #94a3b8; 
        text-decoration: none; 
        font-weight: 500;
        font-size: 0.95rem;
        transition: 0.2s; 
    }

    .footer-links a:hover { 
        color: #fff; 
    }

    .footer-copyright {
        font-size: 0.85rem;
        color: #64748b;
        border-top: 1px solid #2d3135;
        padding-top: 25px;
    }

    /* Mobile adjustments */
    @media (max-width: 767px) {
        .footer-links {
            flex-direction: column; /* Stacks links vertically on small screens */
            gap: 15px;
        }
    }

/* --- NAVBAR BASE --- */
    .navbar { 
        background: #ffffff; 
        border-bottom: 1px solid #f0f0f0; 
        height: 70px; 
        z-index: 1050; 
    }

    /* --- HAMBURGER ANIMATION (GeneratePress Style) --- */
    .navbar-toggler { border: none; padding: 10px; }
    .hamburger-wrapper {
        width: 25px;
        height: 20px;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .line {
        width: 100%;
        height: 2px;
        background-color: #333;
        transition: 0.3s;
        border-radius: 2px;
    }

    /* --- MOBILE OVERLAY MENU --- */
    @media (max-width: 991px) {
        .navbar-collapse {
            position: fixed;
            top: 0;
            left: 0; /* Change to right: 0 if you want it to slide from right */
            width: 100%;
            height: 100vh;
            background: #ffffff;
            z-index: 9999;
            padding: 0;
            display: block;
            transform: translateX(-100%); /* Start hidden off-screen */
            transition: transform 0.3s ease-in-out;
            overflow-y: auto;
        }

        .navbar-collapse.show {
            transform: translateX(0); /* Slide in */
        }

        .mobile-menu-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px;
            border-bottom: 1px solid #eee;
            background: #f9f9f9;
        }

        .menu-title { font-weight: 800; text-transform: uppercase; color: #666; font-size: 0.9rem; }
        .close-menu { 
            background: none; 
            border: none; 
            font-size: 1.5rem; 
            color: #333; 
        }

        .navbar-nav {
            padding: 20px 0;
            text-align: left;
        }

        .nav-item {
            border-bottom: 1px solid #f5f5f5;
        }

        .nav-link {
            padding: 15px 25px !important;
            font-size: 1.1rem;
            display: block;
            width: 100%;
        }
    }

    /* --- DESKTOP NAVBAR --- */
    @media (min-width: 992px) {
        .nav-link {
            font-weight: 600;
            margin-left: 15px;
            color: #333 !important;
        }
        .nav-link:hover { color: var(--primary-blue) !important; }
    }

body {
    background-color: #fcfdfe; /* Ultra-light blue-grey */
    color: #1e293b; /* Slate-800 for better readability */
}

    </style>

</head>
<body>
   <nav class="navbar navbar-expand-lg fixed-top">
