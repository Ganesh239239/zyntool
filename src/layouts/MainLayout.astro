---
// SEO Props
const { 
    title = "ZynTool - Free Online Image Editor", 
    description = "Compress, resize, crop and convert images online for free.",
    isHome = false 
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-site-verification" content="Qs3TKSj586DhwbsGN39F8LqXGcvNLgn5oQeW747IMQY" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
    
    <!-- Google Fonts: Plus Jakarta Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- External Assets -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Cropper.js -->
<link
  rel="stylesheet"
  href="https://unpkg.com/cropperjs@1.6.2/dist/cropper.css"
/>
<script src="https://unpkg.com/cropperjs@1.6.2/dist/cropper.js"></script>

    
    <style is:global>
        :root { --primary-brand: #4b8df8; --bg-gray: #f3f3f7; }
        
        /* THE FLEXBOX STICKY FOOTER FIX */
        html, body { height: 100%; margin: 0; }
        
        body { 
            font-family: 'Plus Jakarta Sans', sans-serif !important;
            padding-top: 70px;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Dynamic background logic */
        body.is-home { background-color: var(--bg-gray) !important; }
        body:not(.is-home) { background-color: #ffffff !important; }

        main { flex: 1 0 auto; } /* This forces the footer to the bottom */

        /* NAVIGATION */
        .navbar { background: #fff; border-bottom: 1px solid #e0e0e6; height: 70px; z-index: 1050; }
        .navbar-brand { font-weight: 800; font-size: 1.4rem; color: #111 !important; text-decoration: none; letter-spacing: -0.5px; }
        .navbar-brand span { color: var(--primary-brand); }

        /* MOBILE MENU OVERLAY (The design you liked) */
        #mobileMenu {
            position: fixed; top: 0; left: 0; width: 100%; height: 100vh;
            background: #ffffff; z-index: 2000; display: none; flex-direction: column; padding: 25px;
        }
        #mobileMenu.active { display: flex; }
        .mobile-link { font-size: 1.4rem; font-weight: 800; color: #111; text-decoration: none; padding: 15px 0; border-bottom: 1px solid #f3f4f6; }

        /* FOOTER SECTION */
        footer { 
            background-color: #0f172a; 
            color: #94a3b8; 
            padding: 70px 0 40px; 
            flex-shrink: 0; /* Prevents footer from collapsing */
        }
        .footer-links { list-style: none; padding: 0; margin-bottom: 40px; display: flex; justify-content: center; gap: 30px; flex-wrap: wrap; }
        .footer-links a { color: #cbd5e1; text-decoration: none; font-size: 1rem; font-weight: 600; }
        @media (max-width: 767px) {
            .footer-links { flex-direction: column; align-items: center; gap: 15px; }
        }
        .footer-copy { font-size: 0.9rem; color: #64748b; border-top: 1px solid #1e293b; padding-top: 30px; }
    </style>
</head>
<body class={isHome ? "is-home" : ""}>
    <nav class="navbar navbar-expand-lg fixed-top shadow-sm">
        <div class="container d-flex justify-content-between align-items-center">
            <a class="navbar-brand" href="/">ZYN<span>TOOL</span></a>
            
            <ul class="navbar-nav d-none d-lg-flex flex-row gap-4 text-uppercase small fw-bold">
                <li class="nav-item"><a class="nav-link text-dark" href="/compress-image">Compress</a></li>
                <li class="nav-item"><a class="nav-link text-dark" href="/resize-image">Resize</a></li>
                <li class="nav-item"><a class="nav-link text-dark" href="/crop-image">Crop</a></li>
                <li class="nav-item"><a class="nav-link text-dark" href="/convert-to-jpg">Convert</a></li>
            </ul>

            <button class="d-lg-none border-0 bg-transparent p-0" id="menuOpen">
                <i class="fa-solid fa-bars-staggered fs-3"></i>
            </button>
        </div>
    </nav>

    <!-- MOBILE MENU DESIGN (MATCHED TO OLD DESIGN) -->
    <div id="mobileMenu">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <span class="navbar-brand">ZYN<span>TOOL</span></span>
            <button class="border-0 bg-transparent p-0" id="menuClose"><i class="fa-solid fa-xmark fs-2"></i></button>
        </div>
        <a href="/" class="mobile-link">Home</a>
        <a href="/compress-image" class="mobile-link">Compress Image</a>
        <a href="/resize-image" class="mobile-link">Resize Image</a>
        <a href="/crop-image" class="mobile-link">Crop Image</a>
        <a href="/convert-to-jpg" class="mobile-link">Convert to JPG</a>
        <a href="/about" class="mobile-link">About Us</a>
    </div>

    <main>
        <slot />
    </main>

    <footer>
        <div class="container text-center">
            <ul class="footer-links">
                <li><a href="/about">About Us</a></li>
                <li><a href="/privacy">Privacy Policy</a></li>
                <li><a href="/terms">Terms</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="/compress-image">Compress</a></li>
                <li><a href="/resize-image">Resize</a></li>
                <li><a href="/image-to-pdf">Image to PDF</a></li>
            </ul>
            <div class="footer-copy">
                <p>© 2025 ZynTool — Fast & Private Browser-Based Tools.</p>
            </div>
        </div>
    </footer>

    <!-- Libraries -->
    <script is:inline src="https://cdn.jsdelivr.net/npm/browser-image-compression@2.0.2/dist/browser-image-compression.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>

    <script is:inline>
        const openBtn = document.getElementById('menuOpen');
        const closeBtn = document.getElementById('menuClose');
        const menu = document.getElementById('mobileMenu');
        
        if(openBtn) openBtn.onclick = () => { menu.classList.add('active'); document.body.style.overflow = 'hidden'; }
        if(closeBtn) closeBtn.onclick = () => { menu.classList.remove('active'); document.body.style.overflow = 'auto'; }
    </script>
</body>
</html>
