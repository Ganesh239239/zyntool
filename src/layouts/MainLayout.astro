            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainMenu" aria-label="Toggle navigation">
                <div class="hamburger-wrapper">
                    <span class="line"></span>
                    <span class="line"></span>
                    <span class="line"></span>
