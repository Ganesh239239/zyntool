---
import { getCollection } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';
const tools = await getCollection('tools');

const categories = [
  { id: 'all', label: 'All Tools' },
  { id: 'optimize', label: 'Optimize' },
  { id: 'create', label: 'Studio' },
  { id: 'edit', label: 'Adjust' },
  { id: 'convert', label: 'Formats' },
  { id: 'security', label: 'Privacy' },
];
---

<MainLayout title="ZynTool | Professional Private Image Suite">
  
  <section class="bg-white border-b border-gray-100 pt-10 pb-14">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-6xl font-[800] text-gray-900 tracking-tight mb-4">
        Professional Tools. <span class="text-indigo-600">0% Server Uploads.</span>
      </h1>
      <p class="text-gray-500 text-lg max-w-2xl mx-auto font-medium mb-10">
        The fastest way to edit images in bulk without compromising your privacy.
      </p>

      <!-- PILLS DESIGN (MATCHED) -->
      <div class="flex flex-wrap justify-center gap-3 max-w-4xl mx-auto">
        {categories.map((cat) => (
          <button 
            class={`filter-btn px-6 py-2.5 rounded-full text-sm font-bold transition-all border outline-none ${cat.id === 'all' ? 'active bg-[#2c2e33] border-[#2c2e33] text-white' : 'bg-white border-gray-200 text-slate-600 hover:border-gray-400'}`}
            data-category={cat.id}
          >
            {cat.label}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- GRID: LEFT ALIGNED (MATCHED) -->
  <section class="py-12">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 xl:grid-cols-5 gap-4" id="toolsGrid">
        {tools.map((tool) => (
          <div class="tool-item group" data-category={tool.data.category}>
            <a href={`/${tool.slug || tool.id}`} class="block no-underline">
              <!-- CARD DESIGN: LEFT ALIGNED -->
              <div class="bg-white p-6 rounded-[24px] border border-gray-100 shadow-sm transition-all duration-300 group-hover:-translate-y-2 group-hover:shadow-xl flex flex-col items-start text-left h-full">
                
                <!-- Icon Box: Top Left -->
                <div class="w-14 h-14 rounded-2xl flex items-center justify-center text-2xl mb-4" style={`background-color: ${tool.data.color}15; color: ${tool.data.color}`}>
                  <i class={`fa-solid ${tool.data.icon}`}></i>
                </div>

                <!-- Text Content -->
                <div class="flex-1">
                  <h5 class="text-gray-900 font-bold text-lg mb-2 tracking-tight">
                    {tool.data.title}
                  </h5>
                  <p class="text-gray-500 text-[13px] font-medium leading-relaxed">
                    {tool.data.description}
                  </p>
                </div>
              </div>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <script is:inline>
    // Filtering Logic stays robust
    const buttons = document.querySelectorAll('.filter-btn');
    const items = document.querySelectorAll('.tool-item');

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const cat = btn.dataset.category;
        buttons.forEach(b => b.classList.remove('active', 'bg-[#2c2e33]', 'border-[#2c2e33]', 'text-white'));
        buttons.forEach(b => b.classList.add('bg-white', 'border-gray-200', 'text-slate-600'));
        btn.classList.add('active', 'bg-[#2c2e33]', 'border-[#2c2e33]', 'text-white');

        items.forEach(item => {
          if (cat === 'all' || item.dataset.category === cat) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  </script>
</MainLayout>
