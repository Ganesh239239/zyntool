---
import { getCollection } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';
const tools = await getCollection('tools');

// Categories matched to your specific design request
const categories = [
  { id: 'all', label: 'Everything' },
  { id: 'optimize', label: 'Performance' },
  { id: 'create', label: 'Studio' },
  { id: 'edit', label: 'Adjust' },
  { id: 'convert', label: 'Formats' },
  { id: 'security', label: 'Privacy' },
];
---

<MainLayout title="ZynTool | Professional Private Image Suite">
  
  <section class="bg-white border-b border-gray-100 pt-8 pb-12">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-3xl md:text-5xl font-[900] text-gray-900 tracking-tight mb-3">
        Professional Tools. <span class="text-indigo-600">0% Server Uploads.</span>
      </h1>
      <p class="text-gray-500 text-base md:text-lg max-w-2xl mx-auto font-medium mb-10">
        Fast, free, and secure. Your photos <strong>never leave your device</strong>.
      </p>

      <!-- PILL MENUS: Matches your image perfectly -->
      <div class="flex flex-wrap justify-center gap-3 max-w-4xl mx-auto">
        {categories.map((cat) => (
          <button 
            class={`filter-btn px-6 py-2.5 rounded-full text-sm font-bold transition-all border outline-none ${cat.id === 'all' ? 'active bg-[#2c2e33] border-[#2c2e33] text-white' : 'bg-white border-gray-200 text-slate-600 hover:border-gray-400'}`}
            data-category={cat.id}
          >
            {cat.label}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Tools Grid section stays the same as previous success version -->
  <section class="py-10">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4" id="toolsGrid">
        {tools.map((tool) => (
          <div class="tool-item" data-category={tool.data.category}>
            <a href={`/${tool.slug || tool.id}`} class="block no-underline group">
              <div class="bg-white p-5 rounded-[24px] border border-gray-100 shadow-sm transition-all duration-300 group-hover:-translate-y-2 group-hover:shadow-xl flex md:flex-col items-center md:text-center gap-5 md:gap-0">
                <div class="flex-shrink-0 w-14 h-14 md:w-20 md:h-20 md:mx-auto md:mb-5 rounded-2xl flex items-center justify-center text-2xl md:text-3xl" style={`background-color: ${tool.data.color}10; color: ${tool.data.color}`}>
                  <i class={`fa-solid ${tool.data.icon}`}></i>
                </div>
                <div class="flex-1">
                  <h5 class="text-gray-900 font-bold text-lg mb-1 tracking-tight">{tool.data.title}</h5>
                  <p class="text-gray-500 text-xs font-medium leading-relaxed line-clamp-2">{tool.data.description}</p>
                </div>
              </div>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <script is:inline>
    const buttons = document.querySelectorAll('.filter-btn');
    const items = document.querySelectorAll('.tool-item');

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const cat = btn.dataset.category;
        
        // Reset all buttons to inactive state
        buttons.forEach(b => {
            b.classList.remove('bg-[#2c2e33]', 'border-[#2c2e33]', 'text-white');
            b.classList.add('bg-white', 'border-gray-200', 'text-slate-600');
        });

        // Set clicked button to active (Dark Slate)
        btn.classList.add('bg-[#2c2e33]', 'border-[#2c2e33]', 'text-white');
        btn.classList.remove('bg-white', 'border-gray-200', 'text-slate-600');

        items.forEach(item => {
          if (cat === 'all' || item.dataset.category === cat) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  </script>
</MainLayout>
