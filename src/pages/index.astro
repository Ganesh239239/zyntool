---
import { getCollection } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';
const tools = await getCollection('tools');

const categories = [
  { id: 'all', label: 'All' },
  { id: 'optimize', label: 'Optimize' },
  { id: 'create', label: 'Create' },
  { id: 'edit', label: 'Edit' },
  { id: 'convert', label: 'Convert' },
  { id: 'security', label: 'Security' },
];
---

<MainLayout title="ZynTool | Home" isHome={true}>
  
  <!-- HERO SECTION: Simple & Native -->
  <section class="hero-bg">
    <div class="container-custom">
      <h1>Every tool you could want to <span class="accent-text">edit images in bulk</span></h1>
      <p>Your online photo editor is here and forever free!</p>

      <!-- FILTER PILLS -->
      <div class="filter-pills">
        {categories.map((cat) => (
          <button class="filter-btn" data-category={cat.id}>
            {cat.label}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- TOOLS GRID: THE PIXEL-PERFECT NATIVE CSS GRID -->
  <section class="grid-bg">
    <div class="container-custom">
      <div class="tools-grid" id="toolsGrid">
        {tools.map((tool) => (
          <div class="tool-item" data-category={tool.data.category}>
            <a href={`/${tool.slug || tool.id}`} class="tool-card">
              
              <!-- CARD HEADER: Switches from Row to Column -->
              <div class="card-header">
                <div class="icon-box" style={`background-color: ${tool.data.color}15; color: ${tool.data.color}`}>
                  <i class={`fa-solid ${tool.data.icon}`}></i>
                </div>
                <h3 class="tool-title">{tool.data.title}</h3>
              </div>

              <!-- DESCRIPTION: Always stays below -->
              <p class="tool-desc">{tool.data.description}</p>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* --- BASE CONTAINER --- */
  .container-custom {
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* --- HERO STYLES --- */
  .hero-bg {
    background: #fff;
    padding: 60px 0;
    text-align: center;
    border-bottom: 1px solid #f0f0f0;
  }
  .hero-bg h1 {
    font-size: 42px;
    font-weight: 800;
    color: #1a202c;
    letter-spacing: -1px;
    margin-bottom: 15px;
  }
  .accent-text { color: #4f46e5; }
  .hero-bg p { font-size: 18px; color: #64748b; margin-bottom: 40px; }

  /* Filter Pills */
  .filter-pills {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 12px;
  }
  .filter-btn {
    background: #fff;
    border: 1px solid #e2e8f0;
    border-radius: 50px;
    padding: 8px 24px;
    font-size: 14px;
    font-weight: 700;
    color: #475569;
    cursor: pointer;
    transition: 0.2s;
  }
  .filter-btn:hover { border-color: #2c2e33; }
  .filter-btn.active { background: #2c2e33; border-color: #2c2e33; color: #fff; }

  /* --- GRID STYLES --- */
  .grid-bg {
    background-color: #f3f3f7; /* iLoveIMG Light Gray */
    padding: 50px 0;
    min-height: 100vh;
  }

  .tools-grid {
    display: grid;
    /* Desktop: Perfect 5 Columns */
    grid-template-columns: repeat(5, 1fr);
    gap: 16px;
  }

  .tool-card {
    background: #fff;
    padding: 28px;
    border-radius: 12px;
    border: 1px solid #e2e8f0;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    height: 100%;
    transition: transform 0.3s, box-shadow 0.3s;
  }
  .tool-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.06);
    border-color: #4f46e5;
  }

  /* Card Header Internal Layout */
  .card-header {
    display: flex;
    flex-direction: column; /* Desktop: Icon on top */
    align-items: flex-start;
    margin-bottom: 12px;
  }

  .icon-box {
    width: 52px;
    height: 52px;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    margin-bottom: 20px; /* Space above title on Desktop */
  }

  .tool-title {
    font-size: 19px;
    font-weight: 700;
    color: #1a202c;
    margin: 0;
    line-height: 1.2;
  }

  .tool-desc {
    font-size: 13.5px;
    color: #64748b;
    line-height: 1.6;
    margin: 0;
    margin-top: 5px;
  }

  /* --- RESPONSIVE BREAKPOINTS --- */
  @media (max-width: 1100px) {
    .tools-grid { grid-template-columns: repeat(3, 1fr); }
  }

  @media (max-width: 768px) {
    .hero-bg h1 { font-size: 28px; }
    .tools-grid { 
        grid-template-columns: 1fr; /* Mobile: Single column */
        gap: 12px;
    }
    
    .tool-card {
        padding: 20px;
    }

    /* THE MOBILE HORIZONTAL SHIFT */
    .card-header {
        flex-direction: row; /* Mobile: Icon next to title */
        align-items: center;
        gap: 15px;
        margin-bottom: 10px;
    }

    .icon-box {
        width: 45px;
        height: 45px;
        margin-bottom: 0; /* Reset desktop spacing */
        font-size: 18px;
    }
    
    .tool-title { font-size: 17px; }
    .tool-desc { font-size: 13px; }
  }
</style>

<script is:inline>
  // Robust vanilla JS filtering
  const buttons = document.querySelectorAll('.filter-btn');
  const items = document.querySelectorAll('.tool-item');

  // Set default active button
  document.querySelector('[data-category="all"]').classList.add('active');

  buttons.forEach(btn => {
    btn.addEventListener('click', () => {
      const cat = btn.getAttribute('data-category');
      
      buttons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      items.forEach(item => {
        const itemCat = item.getAttribute('data-category');
        if (cat === 'all' || itemCat === cat) {
          item.style.display = 'block';
        } else {
          item.style.display = 'none';
        }
      });
    });
  });
</script>
