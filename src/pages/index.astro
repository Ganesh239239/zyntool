---
import { getCollection } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';

const tools = await getCollection('tools');

const categories = [
  { id: 'all', label: 'All' },
  { id: 'optimize', label: 'Optimize' },
  { id: 'create', label: 'Create' },
  { id: 'edit', label: 'Edit' },
  { id: 'convert', label: 'Convert' },
  { id: 'security', label: 'Security' },
];
---

<MainLayout title="ZynTool | Professional Private Image Suite">
  
  <!-- HERO SECTION -->
  <section class="bg-white pt-10 pb-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-[800] text-slate-900 tracking-tight mb-4">
        Every tool you could want to <span class="text-indigo-600">edit images in bulk</span>
      </h1>
      <p class="text-slate-500 text-lg max-w-2xl mx-auto font-medium mb-12">
        Your online photo editor is here and forever free!
      </p>

      <!-- FILTER PILLS: Wrapped on Mobile, Centered on Desktop -->
      <div class="flex flex-wrap justify-center gap-2 max-w-3xl mx-auto px-2">
        {categories.map((cat) => (
          <button 
            class={`filter-btn px-6 py-2 rounded-full text-sm font-bold transition-all border outline-none ${cat.id === 'all' ? 'active bg-[#2c2e33] border-[#2c2e33] text-white' : 'bg-white border-slate-200 text-slate-600 hover:border-slate-400'}`}
            data-category={cat.id}
          >
            {cat.label}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- TOOLS GRID: EXACT MATCHING LAYOUT -->
  <section class="bg-[#f3f3f7] py-12 min-h-screen">
    <div class="container mx-auto px-4 md:px-6">
      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4" id="toolsGrid">
        {tools.map((tool) => (
          <div class="tool-item group" data-category={tool.data.category}>
            <a href={`/${tool.slug || tool.id}`} class="block no-underline">
              
              <!-- THE EXACT CARD LOGIC: 
                   Mobile: flex-row (Icon Left)
                   Desktop: md:flex-col (Icon Top)
              -->
              <div class="bg-white p-5 md:p-8 rounded-[12px] border border-transparent shadow-sm transition-all duration-300 hover:shadow-xl hover:border-indigo-500 flex flex-row md:flex-col items-center md:text-center gap-4 md:gap-0 h-full">
                
                <!-- Icon Box -->
                <div class="flex-shrink-0 w-12 h-12 md:w-20 md:h-20 md:mb-6 rounded-xl md:rounded-2xl flex items-center justify-center text-xl md:text-3xl transition-transform group-hover:scale-110" 
                     style={`background-color: ${tool.data.color}15; color: ${tool.data.color}`}>
                  <i class={`fa-solid ${tool.data.icon}`}></i>
                </div>

                <!-- Text Content -->
                <div class="flex-1">
                  <h5 class="text-slate-800 font-bold text-lg md:text-xl mb-1 md:mb-3 tracking-tight group-hover:text-indigo-600 transition-colors">
                    {tool.data.title}
                  </h5>
                  <p class="text-slate-500 text-xs md:text-sm font-medium leading-relaxed line-clamp-2 md:line-clamp-none">
                    {tool.data.description}
                  </p>
                </div>
              </div>

            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- SCRIPT FOR FILTERING -->
  <script is:inline>
    const buttons = document.querySelectorAll('.filter-btn');
    const items = document.querySelectorAll('.tool-item');

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const cat = btn.dataset.category;
        buttons.forEach(b => {
            b.classList.remove('bg-[#2c2e33]', 'border-[#2c2e33]', 'text-white');
            b.classList.add('bg-white', 'border-slate-200', 'text-slate-600');
        });
        btn.classList.add('active', 'bg-[#2c2e33]', 'border-[#2c2e33]', 'text-white');
        btn.classList.remove('bg-white', 'border-slate-200', 'text-slate-600');

        items.forEach(item => {
          if (cat === 'all' || item.dataset.category === cat) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  </script>
</MainLayout>
