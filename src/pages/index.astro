---
import { getCollection } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';
const tools = await getCollection('tools');
---

<MainLayout title="Home">
    <section class="hero-section">
        <div class="container text-center">
            <h1 class="hero-title">Every tool you could want to edit images in bulk</h1>
            <p class="hero-subtitle">Your online photo editor is here and forever free!</p>

            <!-- DESIGN FROM YOUR IMAGE -->
            <div class="filter-container mt-4">
                <button class="filter-pill active" onclick="filterTools('all', this)">All</button>
                <button class="filter-pill" onclick="filterTools('optimize', this)">Optimize</button>
                <button class="filter-pill" onclick="filterTools('create', this)">Create</button>
                <button class="filter-pill" onclick="filterTools('edit', this)">Edit</button>
                <button class="filter-pill" onclick="filterTools('convert', this)">Convert</button>
                <button class="filter-pill" onclick="filterTools('security', this)">Security</button>
            </div>
        </div>
    </section>

    <section class="tools-grid py-5">
        <div class="container">
            <div class="row g-4" id="toolsGrid">
                {tools.map((tool) => (
                    <div class="col-12 col-md-4 col-lg-3 tool-item" data-category={tool.data.category}>
                        <a href={`/${tool.slug || tool.id}`} class="tool-link">
                            <div class="tool-card shadow-sm">
                                <div class="tool-icon" style={`color: ${tool.data.color}`}>
                                    <i class={`fa-solid ${tool.data.icon}`}></i>
                                </div>
                                <h5 class="tool-name">{tool.data.title}</h5>
                                <p class="tool-desc">{tool.data.description}</p>
                            </div>
                        </a>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <script is:inline>
        function filterTools(cat, btn) {
            // Update button styles
            document.querySelectorAll('.filter-pill').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            // Filter items
            const items = document.querySelectorAll('.tool-item');
            items.forEach(item => {
                if(cat === 'all' || item.dataset.category === cat) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }
    </script>
</MainLayout>

<style>
    /* --- HERO DESIGN --- */
    .hero-section { padding: 80px 0 40px; background-color: #f8f9fa; }
    .hero-title { font-size: 2.8rem; font-weight: 800; color: #333; letter-spacing: -1px; }
    .hero-subtitle { color: #666; font-size: 1.2rem; margin-top: 15px; }

    /* --- PILL BUTTON DESIGN (Matching your image) --- */
    .filter-container { display: flex; flex-wrap: wrap; justify-content: center; gap: 10px; }
    .filter-pill {
        border: 1px solid #dee2e6;
        background: #fff;
        color: #495057;
        padding: 8px 24px;
        border-radius: 50px; /* Makes it a pill */
        font-weight: 600;
        font-size: 0.95rem;
        transition: 0.2s ease;
        cursor: pointer;
    }
    .filter-pill:hover { background-color: #f1f3f5; border-color: #ced4da; }
    .filter-pill.active {
        background-color: #2c2e33 !important; /* Dark color from your image */
        color: #fff !important;
        border-color: #2c2e33 !important;
    }

    /* --- TOOL CARD DESIGN --- */
    .tool-link { text-decoration: none; color: inherit; }
    .tool-card {
        background: #fff;
        border-radius: 12px;
        padding: 30px 20px;
        height: 100%;
        text-align: center;
        transition: 0.3s;
        border: 1px solid #efefef;
    }
    .tool-card:hover { transform: translateY(-5px); box-shadow: 0 10px 25px rgba(0,0,0,0.08) !important; border-color: #4B90FF; }
    .tool-icon { font-size: 2.5rem; margin-bottom: 15px; }
    .tool-name { font-weight: 700; font-size: 1.15rem; color: #333; margin-bottom: 8px; }
    .tool-desc { font-size: 0.9rem; color: #777; line-height: 1.4; margin-bottom: 0; }

    @media (max-width: 768px) {
        .hero-title { font-size: 2rem; }
    }
</style>
