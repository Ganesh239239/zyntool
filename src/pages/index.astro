---
import { getCollection } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';
const tools = await getCollection('tools');

const categories = [
  { id: 'all', label: 'Everything', icon: 'fa-border-all', color: '#6366f1' },
  { id: 'optimize', label: 'Performance', icon: 'fa-rocket', color: '#22c55e' },
  { id: 'create', label: 'Studio', icon: 'fa-wand-magic-sparkles', color: '#a855f7' },
  { id: 'edit', label: 'Adjust', icon: 'fa-sliders', color: '#3b82f6' },
  { id: 'convert', label: 'Formats', icon: 'fa-sync', color: '#f59e0b' },
  { id: 'security', label: 'Privacy', icon: 'fa-shield-halved', color: '#64748b' },
];
---

<MainLayout title="ZynTool | Professional Private Image Suite">
  
  <!-- HERO SECTION -->
  <section class="bg-white border-b border-slate-100 pt-6 pb-12">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-3xl md:text-6xl font-black text-slate-900 tracking-tight mb-4">
        Professional Tools. <span class="text-indigo-600">0% Server Uploads.</span>
      </h1>
      <p class="text-slate-500 text-lg max-w-2xl mx-auto font-medium mb-8">
        Fast, free, and secure. Your photos <strong>never leave your device</strong>.
      </p>

      <!-- FIXED HERO MENU: Center wrap for all devices -->
      <div class="flex flex-wrap justify-center gap-2 max-w-4xl mx-auto px-2">
        {categories.map((cat) => (
          <button 
            class={`filter-btn flex items-center gap-2 px-4 py-2 rounded-xl text-sm font-bold transition-all border-2 ${cat.id === 'all' ? 'active bg-[#2c2e33] border-[#2c2e33] text-white shadow-md' : 'bg-white border-slate-100 text-slate-600 hover:border-slate-300'}`}
            data-category={cat.id}
          >
            <i class={`fa-solid ${cat.icon} text-[12px]`} style={`color: ${cat.color}`}></i>
            {cat.label}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- TOOLS GRID -->
  <section class="py-12">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 xl:grid-cols-5 gap-3" id="toolsGrid">
        {tools.map((tool) => (
          <div class="tool-item group" data-category={tool.data.category}>
            <a href={`/${tool.slug || tool.id}`} class="block no-underline">
              
              <!-- CARD DESIGN: Row on Mobile, Column on Desktop -->
              <div class="bg-white p-5 md:p-7 rounded-[22px] border border-slate-200 shadow-sm transition-all duration-300 hover:shadow-lg hover:-translate-y-1 h-full">
                
                <div class="flex flex-row md:flex-col items-center md:items-start gap-4 md:gap-0">
                    <!-- Icon Box -->
                    <div class="flex-shrink-0 w-12 h-12 md:w-14 md:h-14 md:mb-6 rounded-2xl flex items-center justify-center text-xl md:text-2xl" style={`background-color: ${tool.data.color}15; color: ${tool.data.color}`}>
                        <i class={`fa-solid ${tool.data.icon}`}></i>
                    </div>

                    <!-- Title: Right of icon on mobile, Below on desktop -->
                    <h5 class="text-slate-800 font-bold text-lg md:text-xl m-0 tracking-tight group-hover:text-indigo-600">
                        {tool.data.title}
                    </h5>
                </div>

                <!-- Description: Always below -->
                <p class="text-slate-500 text-[13px] font-medium leading-relaxed mt-3 md:mt-0">
                    {tool.data.description}
                </p>
              </div>

            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <script is:inline>
    const buttons = document.querySelectorAll('.filter-btn');
    const items = document.querySelectorAll('.tool-item');

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const cat = btn.dataset.category;
        buttons.forEach(b => {
            b.classList.remove('bg-[#2c2e33]', 'border-[#2c2e33]', 'text-white', 'shadow-md');
            b.classList.add('bg-white', 'border-slate-100', 'text-slate-600');
        });
        btn.classList.add('active', 'bg-[#2c2e33]', 'border-[#2c2e33]', 'text-white', 'shadow-md');
        btn.classList.remove('bg-white', 'border-slate-100', 'text-slate-600');

        items.forEach(item => {
          if (cat === 'all' || item.dataset.category === cat) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  </script>
</MainLayout>
