---
import { getCollection } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';
const tools = await getCollection('tools');

const categories = [
  { id: 'all', label: 'All' },
  { id: 'optimize', label: 'Optimize' },
  { id: 'create', label: 'Create' },
  { id: 'edit', label: 'Edit' },
  { id: 'convert', label: 'Convert' },
  { id: 'security', label: 'Security' },
];
---

<MainLayout title="ZynTool | Professional Private Image Suite">
  
  <!-- HERO SECTION -->
  <section class="bg-white border-b border-slate-100 pt-10 pb-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-6xl font-[800] text-slate-900 tracking-tight mb-4">
        Professional Tools. <span class="text-indigo-600">0% Server Uploads.</span>
      </h1>
      <p class="text-slate-500 text-lg max-w-2xl mx-auto font-medium mb-12 leading-relaxed">
        The fastest way to edit images in bulk without compromising your privacy. 
        Your photos never leave your device.
      </p>

      <!-- HERO MENUS: Matching the Pill Design in your image -->
      <div class="flex flex-wrap justify-center gap-3 max-w-3xl mx-auto px-2">
        {categories.map((cat) => (
          <button 
            class={`filter-btn px-6 py-2.5 rounded-full text-sm font-bold transition-all border outline-none ${cat.id === 'all' ? 'active bg-[#2c2e33] border-[#2c2e33] text-white shadow-lg' : 'bg-white border-slate-200 text-[#495057] hover:border-slate-400'}`}
            data-category={cat.id}
          >
            {cat.label}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- TOOLS GRID: Conditional Layout for Mobile vs Desktop -->
  <section class="py-12 bg-[#f3f3f7] min-h-screen">
    <div class="container mx-auto px-4 lg:px-12">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4" id="toolsGrid">
        {tools.map((tool) => (
          <div class="tool-item group" data-category={tool.data.category}>
            <a href={`/${tool.slug || tool.id}`} class="block no-underline">
              
              <!-- CARD: 
                   Mobile: flex-row (Icon left, Title right)
                   Desktop (md+): flex-col (Icon top, Title bottom) 
              -->
              <div class="bg-white p-5 md:p-8 rounded-[24px] border border-slate-200 shadow-sm transition-all duration-300 hover:shadow-xl hover:-translate-y-2 flex flex-row md:flex-col items-center md:text-center gap-4 md:gap-0 h-full">
                
                <!-- Icon Box -->
                <div class="flex-shrink-0 w-12 h-12 md:w-16 md:h-16 md:mb-6 rounded-2xl flex items-center justify-center text-xl md:text-3xl transition-transform group-hover:scale-110 shadow-sm border border-slate-50" style={`background-color: ${tool.data.color}15; color: ${tool.data.color}`}>
                  <i class={`fa-solid ${tool.data.icon}`}></i>
                </div>

                <!-- Text Wrapper -->
                <div class="flex-1 min-w-0">
                  <h5 class="text-slate-800 font-bold text-lg md:text-xl mb-1 md:mb-3 tracking-tight group-hover:text-indigo-600 transition-colors truncate md:whitespace-normal">
                    {tool.data.title}
                  </h5>
                  <!-- Description: Visible always, but slightly smaller on mobile -->
                  <p class="text-slate-500 text-[12px] md:text-[13px] font-medium leading-relaxed line-clamp-2 md:line-clamp-none">
                    {tool.data.description}
                  </p>
                </div>
              </div>

            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <script is:inline>
    // Professional Filter Logic
    const buttons = document.querySelectorAll('.filter-btn');
    const items = document.querySelectorAll('.tool-item');

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const cat = btn.dataset.category;
        
        // Reset State
        buttons.forEach(b => {
            b.classList.remove('bg-[#2c2e33]', 'border-[#2c2e33]', 'text-white', 'shadow-lg');
            b.classList.add('bg-white', 'border-slate-200', 'text-[#495057]');
        });

        // Set Active State
        btn.classList.add('bg-[#2c2e33]', 'border-[#2c2e33]', 'text-white', 'shadow-lg');
        btn.classList.remove('bg-white', 'border-slate-200', 'text-[#495057]');

        // Filter Logic
        items.forEach(item => {
          if (cat === 'all' || item.dataset.category === cat) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  </script>
</MainLayout>
