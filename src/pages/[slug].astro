---
import { getCollection } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';
import CompressTool from '../components/tools/CompressTool.jsx';

export async function getStaticPaths() {
  const toolEntries = await getCollection('tools');
  return toolEntries.map(entry => ({ params: { slug: entry.slug || entry.id }, props: { entry } }));
}

const { entry } = Astro.props;
const toolId = entry.slug || entry.id;
const { Content } = await entry.render();
---

<MainLayout title={entry.data.title} isHome={false}>
    <!-- SLIM APP NAV (Developer Style) -->
    <div class="border-b border-slate-100 bg-white sticky top-[70px] z-40 h-12 flex items-center">
        <div class="container mx-auto px-4 flex justify-between items-center">
            <nav class="flex items-center space-x-2 text-xs font-bold uppercase tracking-wider">
                <a href="/" class="text-slate-400 no-underline hover:text-indigo-600">Home</a>
                <span class="text-slate-300">/</span>
                <span class="text-slate-900">{entry.data.title}</span>
            </nav>
            <div class="flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></span>
                <span class="text-[10px] font-black text-slate-400 uppercase">Engine v3.0 Online</span>
            </div>
        </div>
    </div>

    <div class="container mx-auto px-4 py-10">
        <!-- REACT ISLAND -->
        <div class="min-h-[500px]">
            {toolId === 'compress-image' && <CompressTool client:load entry={entry} />}
        </div>

        <!-- SEO DOCUMENTATION -->
        <div class="mt-20 pt-10 border-t border-slate-100">
            <article class="prose prose-slate max-w-4xl mx-auto prose-headings:font-black">
                <Content />
            </article>
        </div>
    </div>
</MainLayout>
