---
import { getCollection } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';

export async function getStaticPaths() {
  const toolEntries = await getCollection('tools');
  if (!toolEntries) return [];
  return toolEntries.map(entry => ({
    params: { slug: entry.slug || entry.id }, props: { entry },
  }));
}

const { entry } = Astro.props;
if (!entry) return Astro.redirect('/404');

const { Content } = await entry.render();
const toolId = entry.slug || entry.id;
---

<MainLayout title={entry.data.title}>
    <!-- Enhanced Tool Hero -->
    <div class="tool-hero text-white" style={`background: linear-gradient(135deg, ${entry.data.color}, #1a202c);`}>
        <div class="container text-center">
            <h1 class="display-3 fw-black mb-2">{entry.data.title}</h1>
            <p class="opacity-75 fs-5">{entry.data.description}</p>
        </div>
    </div>

    <div class="container tool-container pb-5">
        <!-- STEP 1: UPLOAD -->
        <div id="uploadContainer" class="uploader-card shadow-lg p-3 mb-5">
            <div class="uploader-zone text-center" onclick="document.getElementById('fileInput').click()" style="cursor:pointer">
                <div class="icon-circle mb-3 mx-auto" style={`background: ${entry.data.color}15; color: ${entry.data.color}; width:80px; height:80px; border-radius:50%; display:flex; align-items:center; justify-content:center;`}>
                    <i class={`fa-solid ${entry.data.icon} fa-3x`}></i>
                </div>
                <h2 class="fw-bold">Upload Image</h2>
                <p class="text-muted">Drag & drop your files here or click to browse</p>
                <input type="file" id="fileInput" hidden accept="image/*" />
            </div>
        </div>

        <!-- STEP 2: WORKSPACE -->
        <div id="processingArea" style="display:none;" class="fade-in">
            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="preview-stage overflow-hidden">
                        <div id="imgWrapper" style="width:100%; height:100%; display:flex; align-items:center; justify-content:center;">
                            <img id="mainPreview" src="" class="img-fluid main-preview-img">
                        </div>
                        <div id="internalLoader" class="loader-overlay d-none position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75 d-flex flex-column align-items-center justify-content-center text-white z-3">
                            <div class="spinner-grow text-primary mb-3"></div>
                            <h5 class="fw-bold">Compressing...</h5>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="options-card card p-4 h-100 bg-white sticky-sidebar">
                        <div class="d-flex align-items-center mb-4">
                            <div class="step-badge me-2" style={`background: ${entry.data.color}`}>1</div>
                            <h5 class="fw-bold m-0">Compression Settings</h5>
                        </div>

                        <div id="optionsPanel" class="mb-4">
                            <!-- Injected by JS -->
                        </div>

                        <button id="btnAction" class="btn btn-lg w-100 text-white rounded-pill py-3 fw-bold shadow-sm" style={`background: ${entry.data.color}`}>
                            Compress Image
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- STEP 3: SUCCESS RESULT (iLoveIMG Style) -->
        <div id="resultArea" style="display:none;" class="text-center py-5 fade-in">
            <div class="result-card card bg-white mx-auto shadow-lg p-5 rounded-5 border-0" style="max-width: 650px;">
                <div class="success-badge mb-4"><i class="fa-solid fa-circle-check"></i></div>
                <h2 class="fw-black mb-2 text-dark">Success!</h2>
                
                <!-- SAVINGS STATS SECTION -->
                <div id="savingsStats" class="row g-3 my-4 justify-content-center">
                    <div class="col-6 col-md-4">
                        <div class="p-3 border rounded-4 bg-light">
                            <div class="small text-muted mb-1">Old Size</div>
                            <div id="oldSizeLabel" class="fw-bold">0 KB</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <div class="p-3 border rounded-4 bg-light">
                            <div class="small text-muted mb-1">New Size</div>
                            <div id="newSizeLabel" class="fw-bold text-success">0 KB</div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="p-3 border rounded-4 bg-primary text-white shadow-sm">
                            <div class="small opacity-75 mb-1">Lighter by</div>
                            <div id="percentLabel" class="fw-black fs-4">0%</div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-3 d-sm-flex justify-content-center pt-3">
                    <a id="downloadBtn" class="btn btn-dark btn-lg px-5 py-3 rounded-pill fw-bold shadow">
                        <i class="fa-solid fa-download me-2"></i> Download Image
                    </a>
                    <button class="btn btn-outline-secondary btn-lg px-4 rounded-pill border-2" onclick="location.reload()">
                        <i class="fa-solid fa-rotate-left me-2"></i> Compress Another
                    </button>
                </div>
            </div>
        </div>

        <div class="py-5"><article class="prose mx-auto"><Content /></article></div>
    </div>
</MainLayout>

<style>
    .fw-black { font-weight: 900; }
    .tool-container { margin-top: -5rem; position: relative; z-index: 10; }
    .tool-hero { padding: 100px 0 100px; position: relative; }
    .uploader-card { background: #ffffff; border-radius: 30px; position: relative; }
    .uploader-zone { border: 2px dashed #e2e8f0; border-radius: 24px; padding: 60px 20px; transition: 0.3s; }
    .uploader-zone:hover { background: #f8fbff; border-color: var(--primary-blue); }
    .sticky-sidebar { position: sticky; top: 90px; border-radius: 24px; border: 1px solid #eee; }
    .preview-stage { background: #f0f2f5; border-radius: 24px; min-height: 500px; display: flex; align-items: center; justify-content: center; position: relative; }
    .main-preview-img { max-height: 65vh; border-radius: 8px; }
    .step-badge { width: 28px; height: 28px; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.8rem; font-weight: bold; }
    .success-badge { width: 80px; height: 80px; background: #ecfdf5; color: #10b981; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto; font-size: 2.5rem; }
    .loader-overlay { position: absolute; inset: 0; background: rgba(0,0,0,0.7); display: flex; flex-direction: column; align-items: center; justify-content: center; z-index: 50; border-radius: 24px; }
    .fade-in { animation: fadeInUp 0.5s ease-out; }
    @keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
</style>

<script is:inline define:vars={{ toolId }}>
    const fileInput = document.getElementById('fileInput');
    const uploadContainer = document.getElementById('uploadContainer');
    const processingArea = document.getElementById('processingArea');
    const optionsPanel = document.getElementById('optionsPanel');
    const btnAction = document.getElementById('btnAction');
    const internalLoader = document.getElementById('internalLoader');
    const resultArea = document.getElementById('resultArea');
    const mainPreview = document.getElementById('mainPreview');

    let originalFile = null;

    // Helper to format bytes to human-readable size
    function formatBytes(bytes, decimals = 2) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const dm = decimals < 0 ? 0 : decimals;
        const sizes = ['Bytes', 'KB', 'MB', 'GB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(dm)) + ' ' + sizes[i];
    }

    // Initialize UI Options
    function initOptions() {
        if (toolId === 'compress-image') {
            optionsPanel.innerHTML = `
                <label class="fw-bold small mb-2 d-flex justify-content-between">
                    Compression Level <span id="compVal">70%</span>
                </label>
                <input type="range" id="qIn" class="form-range" min="0.1" max="1" step="0.1" value="0.7">
                <p class="text-muted small mt-2">Lower quality saves more space.</p>
            `;
            const qIn = document.getElementById('qIn');
            qIn.oninput = () => document.getElementById('compVal').innerText = (qIn.value * 100).toFixed(0) + '%';
        } else {
            optionsPanel.innerHTML = `<p class="text-muted small">Standard settings will be applied.</p>`;
        }
    }

    initOptions();

    // Uploader
    fileInput.addEventListener('change', (e) => {
        const file = e.target.files[0];
        if (file) {
            originalFile = file;
            const reader = new FileReader();
            reader.onload = (ev) => {
                mainPreview.src = ev.target.result;
                uploadContainer.style.display = 'none';
                processingArea.style.display = 'block';
            };
            reader.readAsDataURL(file);
        }
    });

    // Processing
    btnAction.addEventListener('click', async () => {
        internalLoader.classList.remove('d-none');
        btnAction.disabled = true;

        try {
            let blob;
            if (toolId === 'compress-image') {
                const q = parseFloat(document.getElementById('qIn').value);
                // Perform compression
                blob = await imageCompression(originalFile, { maxSizeMB: 1, initialQuality: q });
            } else {
                blob = originalFile;
            }

            // --- CALCULATE SAVINGS ---
            const oldSize = originalFile.size;
            const newSize = blob.size;
            const savedBytes = oldSize - newSize;
            const percentSaved = Math.max(0, Math.round((savedBytes / oldSize) * 100));

            // Update Labels
            document.getElementById('oldSizeLabel').innerText = formatBytes(oldSize);
            document.getElementById('newSizeLabel').innerText = formatBytes(newSize);
            document.getElementById('percentLabel').innerText = percentSaved + '%';

            // Prepare Download
            const url = URL.createObjectURL(blob);
            document.getElementById('downloadBtn').href = url;
            document.getElementById('downloadBtn').download = `compressed-${originalFile.name}`;
            
            setTimeout(() => {
                processingArea.style.display = 'none';
                resultArea.style.display = 'block';
            }, 800);

        } catch (e) {
            console.error(e);
            alert("Compression failed. Try a different image.");
            internalLoader.classList.add('d-none');
            btnAction.disabled = false;
        }
    });
</script>
