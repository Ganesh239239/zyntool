---
import { getCollection } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';
const tools = await getCollection('tools');

const categories = [
  { id: 'all', label: 'Everything', icon: 'fa-border-all' },
  { id: 'optimize', label: 'Performance', icon: 'fa-rocket' },
  { id: 'create', label: 'Studio', icon: 'fa-wand-magic-sparkles' },
  { id: 'edit', label: 'Adjust', icon: 'fa-sliders' },
  { id: 'convert', label: 'Formats', icon: 'fa-sync' },
  { id: 'security', label: 'Privacy', icon: 'fa-shield-halved' },
];
---

<MainLayout title="ZynTool | Free Private Image Editor">
  
  <!-- HERO: TIGHT & PROFESSIONAL -->
  <section class="bg-white border-b border-gray-100 pt-12 pb-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-[900] text-gray-900 tracking-tight mb-4">
        Professional Tools. <span class="text-indigo-600">0% Server Uploads.</span>
      </h1>
      <p class="text-gray-500 text-lg max-w-2xl mx-auto font-medium">
        Fast, free, and secure. Since we process everything in your browser, your photos never leave your device.
      </p>

      <!-- FILTER BUTTONS: iLoveIMG Style -->
      <div class="flex flex-wrap justify-center gap-2 mt-10">
        {categories.map((cat) => (
          <button 
            class={`filter-btn flex items-center gap-2 px-5 py-2.5 rounded-xl text-sm font-bold transition-all border-2 ${cat.id === 'all' ? 'active bg-gray-900 border-gray-900 text-white' : 'bg-white border-gray-100 text-gray-500 hover:border-gray-200'}`}
            data-category={cat.id}
          >
            <i class={`fa-solid ${cat.icon} opacity-50 text-[12px]`}></i>
            {cat.label}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- GRID: Light gray background makes cards pop -->
  <section class="py-12">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4" id="toolsGrid">
        {tools.map((tool) => (
          <div class="tool-item" data-category={tool.data.category}>
            <a href={`/${tool.slug || tool.id}`} class="block no-underline group">
              <!-- CARD DESIGN -->
              <div class="bg-white p-6 rounded-[20px] border border-gray-100 shadow-sm transition-all duration-300 group-hover:-translate-y-2 group-hover:shadow-xl flex md:flex-col items-center md:text-center gap-5 md:gap-0">
                
                <div class="flex-shrink-0 w-16 h-16 md:w-20 md:h-20 md:mx-auto md:mb-5 rounded-2xl flex items-center justify-center text-2xl md:text-3xl" style={`background-color: ${tool.data.color}15; color: ${tool.data.color}`}>
                  <i class={`fa-solid ${tool.data.icon}`}></i>
                </div>

                <div class="flex-1">
                  <h5 class="text-gray-900 font-bold text-lg md:text-xl mb-1 tracking-tight">
                    {tool.data.title}
                  </h5>
                  <p class="text-gray-500 text-xs md:text-sm font-medium leading-relaxed line-clamp-2">
                    {tool.data.description}
                  </p>
                </div>
              </div>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <script is:inline>
    // Filtering Logic
    const buttons = document.querySelectorAll('.filter-btn');
    const items = document.querySelectorAll('.tool-item');

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const cat = btn.dataset.category;
        buttons.forEach(b => b.classList.remove('active', 'bg-gray-900', 'border-gray-900', 'text-white'));
        buttons.forEach(b => b.classList.add('bg-white', 'border-gray-100', 'text-gray-500'));
        btn.classList.add('active', 'bg-gray-900', 'border-gray-900', 'text-white');

        items.forEach(item => {
          if (cat === 'all' || item.dataset.category === cat) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  </script>
</MainLayout>
