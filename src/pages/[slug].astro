---
import { getCollection } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';
import CompressTool from '../components/tools/CompressTool.jsx';

export async function getStaticPaths() {
  const toolEntries = await getCollection('tools');
  return toolEntries.map(entry => ({ params: { slug: entry.slug || entry.id }, props: { entry } }));
}

const { entry } = Astro.props;
const toolId = entry.slug || entry.id;
const { Content } = await entry.render();
---

<MainLayout title={entry.data.title} isHome={false}>
    <!-- SLIM TOOLBAR: Focus remains on the tool -->
    <nav class="h-14 border-b border-slate-100 bg-white/80 backdrop-blur-md sticky top-[70px] z-40 flex items-center">
        <div class="container mx-auto px-6 flex justify-between items-center">
            <div class="flex items-center gap-2 text-[10px] font-black uppercase tracking-[2px] text-slate-400">
                <a href="/" class="hover:text-indigo-600 no-underline transition-colors">ZynTool</a>
                <span>/</span>
                <span class="text-slate-900">{entry.data.title}</span>
            </div>
            <div class="flex items-center gap-2">
                <div class="w-2 h-2 rounded-full bg-emerald-500 shadow-[0_0_8px_rgba(16,185,129,0.5)]"></div>
                <span class="text-[10px] font-black text-slate-400 uppercase">Engine v4.0 Secure</span>
            </div>
        </div>
    </nav>

    <div class="container mx-auto px-6 py-12">
        <!-- REACT ISOLATED ENGINE -->
        <div class="min-h-[600px]">
            {toolId === 'compress-image' && <CompressTool client:load color={entry.data.color} />}
        </div>

        <!-- TECHNICAL DOCUMENTATION (SEO) -->
        <div class="mt-24 pt-12 border-t border-slate-100">
            <article class="prose prose-slate max-w-4xl mx-auto prose-headings:font-black prose-p:text-slate-500">
                <Content />
            </article>
        </div>
    </div>
</MainLayout>
