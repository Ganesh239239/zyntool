---
const { entry, relatedTools } = Astro.props;
---

<div id="compress-tool">
    <!-- STEP 1: UPLOADER -->
    <div id="uploadContainer" class="uploader-card shadow-lg p-3 mb-5 bg-white">
        <div class="uploader-border-wrapper p-3"> 
            <div class="uploader-zone text-center" onclick="document.getElementById('fileInput').click()" style="cursor:pointer">
                <div class="icon-circle mb-3 mx-auto" style={`background: ${entry.data.color}15; color: ${entry.data.color}; width:80px; height:80px; border-radius:50%; display:flex; align-items:center; justify-content:center;`}>
                    <i class={`fa-solid ${entry.data.icon} fa-3x`}></i>
                </div>
                <h2 class="fw-bold text-dark">Select Images</h2>
                <p class="text-muted small">Upload multiple JPG, PNG, or WebP images.</p>
                <input type="file" id="fileInput" hidden accept="image/*" multiple />
            </div>
        </div>
    </div>

    <!-- STEP 2: WORKSPACE -->
    <div id="processingArea" style="display:none;" class="fade-in">
        <div class="row g-4 text-start">
            <!-- Left: Batch List -->
            <div class="col-lg-8">
                <div class="card border rounded-4 bg-light overflow-hidden">
                    <div class="p-3 bg-white border-bottom fw-bold d-flex justify-content-between">
                        <span>Image Queue</span>
                        <span id="queueCount" class="text-primary">0 files</span>
                    </div>
                    <div id="imageGrid" class="p-4 d-grid gap-3" style="grid-template-columns: repeat(auto-fill, minmax(140px, 1fr)); max-height: 500px; overflow-y: auto;">
                        <!-- Cards injected here -->
                    </div>
                </div>
            </div>

            <!-- Right: Settings Sidebar (FIXED OPTIONS VISIBILITY) -->
            <div class="col-lg-4">
                <div class="card p-4 border-0 shadow-sm rounded-4 bg-white sticky-top" style="top: 100px;">
                    <h5 class="fw-bold mb-4">Compression Settings</h5>
                    
                    <div class="mb-4">
                        <label class="small fw-bold text-muted d-flex justify-content-between mb-2">
                            Quality Level <span id="qVal" class="text-primary fw-bold">70%</span>
                        </label>
                        <input type="range" id="qIn" class="form-range" min="0.1" max="1" step="0.1" value="0.7">
                        <p class="extra-small text-muted mt-2">Adjust for smaller size or better quality.</p>
                    </div>

                    <button id="btnAction" class="btn btn-primary btn-lg w-100 rounded-pill py-3 fw-bold shadow-sm border-0 mb-4">
                        Optimize Images <i class="fa-solid fa-bolt-lightning ms-2"></i>
                    </button>

                    <div class="related-tools-mini pt-3 border-top d-none d-lg-block">
                        <p class="extra-small fw-bold text-muted mb-3 uppercase">Quick Access</p>
                        <div class="row g-2">
                            {relatedTools.map(t => (
                                <div class="col-6">
                                    <a href={`/${t.slug || t.id}`} class="text-decoration-none extra-small text-dark d-flex align-items-center p-2 border rounded-3 bg-light-hover">
                                        <i class={`fa-solid ${t.data.icon} me-2`} style={`color: ${t.data.color}`}></i>
                                        <span class="text-truncate">{t.data.title.split(' ')[0]}</span>
                                    </a>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- STEP 3: RESULT AREA -->
    <div id="resultArea" style="display:none;" class="text-center py-5 fade-in">
        <div class="result-card card bg-white mx-auto shadow-lg p-5 rounded-5 border-0" style="max-width: 650px;">
            <div class="success-badge mb-4"><i class="fa-solid fa-circle-check"></i></div>
            <h2 class="fw-black mb-4">Success! Images Lighter</h2>
            
            <div class="row g-3 mb-5">
                <div class="col-4">
                    <div class="p-2 border rounded-4 bg-light text-center small">
                        <div class="text-muted">Before</div>
                        <div id="oldS" class="fw-bold">0 KB</div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="p-2 border rounded-4 bg-light text-center small">
                        <div class="text-muted">After</div>
                        <div id="newS" class="fw-bold text-success">0 KB</div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="p-2 border rounded-4 bg-primary text-white text-center small shadow-sm">
                        <div class="opacity-75">Saved</div>
                        <div id="pctS" class="fw-bold">0%</div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2 flex-wrap justify-content-center">
                <a id="downloadBtn" class="btn btn-dark px-4 py-2 rounded-pill fw-bold shadow-sm d-flex align-items-center">
                    <i class="fa-solid fa-download me-2"></i> Download ZIP
                </a>
                <button class="btn btn-outline-secondary px-4 py-2 rounded-pill border-2 fw-bold d-flex align-items-center" onclick="location.reload()">
                    <i class="fa-solid fa-rotate-left me-2"></i> Compress More
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .uploader-card { border-radius: 24px; border: 1px solid #eee; }
    .uploader-zone { border: 3px dashed #cbd5e1; border-radius: 20px; padding: 60px 20px; transition: 0.3s; }
    .uploader-zone:hover { border-color: #4B90FF; background: #f8faff; }
    .extra-small { font-size: 0.65rem; font-weight: 800; text-transform: uppercase; }
    .bg-light-hover:hover { background: #f8f9fa; border-color: #4B90FF !important; }
    .img-thumb-card { background: white; padding: 10px; border-radius: 12px; border: 1px solid #e2e8f0; text-align: center; }
    .img-thumb-card img { width: 100%; height: 90px; object-fit: contain; border-radius: 6px; }
    .success-badge { width: 60px; height: 60px; background: #ecfdf5; color: #10b981; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto; font-size: 1.8rem; }
</style>

<script is:inline>
    const fileInput = document.getElementById('fileInput');
    const uploadContainer = document.getElementById('uploadContainer');
    const processingArea = document.getElementById('processingArea');
    const btnAction = document.getElementById('btnAction');
    const resultArea = document.getElementById('resultArea');
    const imageGrid = document.getElementById('imageGrid');
    const qIn = document.getElementById('qIn');
    const qVal = document.getElementById('qVal');

    let filesQueue = [];

    qIn.oninput = (e) => qVal.innerText = Math.round(e.target.value * 100) + '%';

    fileInput.addEventListener('change', (e) => {
        const files = Array.from(e.target.files);
        if (files.length === 0) return;

        uploadContainer.style.display = 'none';
        processingArea.style.display = 'flex';
        document.getElementById('queueCount').innerText = `${files.length} files`;

        files.forEach(file => {
            filesQueue.push(file);
            const card = document.createElement('div');
            card.className = 'img-thumb-card shadow-sm';
            card.innerHTML = `<img src="${URL.createObjectURL(file)}"><span class="extra-small d-block text-truncate mt-2">${file.name}</span>`;
            imageGrid.appendChild(card);
        });
    });

    btnAction.addEventListener('click', async () => {
        btnAction.disabled = true;
        btnAction.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Processing...';

        let totalOld = 0;
        let totalNew = 0;
        const zip = new JSZip();

        for (const file of filesQueue) {
            totalOld += file.size;
            try {
                const blob = await imageCompression(file, { maxSizeMB: 1, initialQuality: parseFloat(qIn.value) });
                totalNew += blob.size;
                zip.file(`zyn-compressed-${file.name}`, blob);
            } catch (err) {
                totalNew += file.size;
            }
        }

        // Stats
        document.getElementById('oldS').innerText = (totalOld / 1024).toFixed(1) + ' KB';
        document.getElementById('newS').innerText = (totalNew / 1024).toFixed(1) + ' KB';
        document.getElementById('pctS').innerText = Math.round(((totalOld - totalNew) / totalOld) * 100) + '%';

        const zipBlob = await zip.generateAsync({ type: 'blob' });
        const url = URL.createObjectURL(zipBlob);
        document.getElementById('downloadBtn').href = url;
        document.getElementById('downloadBtn').download = "zyntool-compressed.zip";

        processingArea.style.display = 'none';
        resultArea.style.display = 'block';
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });
</script>
