---
const { entry, relatedTools } = Astro.props;
---

<div id="compress-tool">
    <!-- STEP 1: UPLOAD BOX (UNTOUCHED DESIGN) -->
    <div id="uploadContainer" class="uploader-card shadow-lg p-3 mb-5 bg-white border">
        <div class="uploader-zone text-center" onclick="document.getElementById('fileInput').click()" style="cursor:pointer">
            <div class="icon-circle mb-3 mx-auto" style={`background: ${entry.data.color}15; color: ${entry.data.color}; width:80px; height:80px; border-radius:50%; display:flex; align-items:center; justify-content:center;`}>
                <i class={`fa-solid ${entry.data.icon} fa-3x`}></i>
            </div>
            <h2 class="fw-bold">Select Images</h2>
            <p class="text-muted small">or drop them here</p>
            <input type="file" id="fileInput" hidden accept="image/jpeg,image/png,image/webp" multiple />
        </div>
    </div>

    <!-- STEP 2: PREMIUM WORKSPACE (THE REDESIGN) -->
    <div id="processingArea" style="display:none;" class="fade-in">
        <div class="row g-4 text-start">
            
            <!-- LEFT COLUMN: PREVIEW STAGE -->
            <div class="col-lg-8">
                <div class="workspace-stage shadow-sm rounded-4 border bg-white overflow-hidden position-relative">
                    <div class="stage-header p-3 border-bottom d-flex justify-content-between align-items-center bg-light">
                        <span class="badge bg-white text-dark border shadow-sm">Preview Mode</span>
                        <div id="savingsBadge" class="badge bg-success shadow-sm d-none">Lighter by 0%</div>
                    </div>
                    
                    <div class="image-viewport d-flex align-items-center justify-content-center p-4">
                        <!-- THE IMAGE FIX: Contained and sharp -->
                        <img id="mainPreview" src="" class="img-fluid workspace-img shadow-lg">
                    </div>

                    <!-- Loader -->
                    <div id="miniLoader" class="loader-overlay d-none">
                        <div class="spinner-border text-primary mb-2"></div>
                        <span class="fw-bold small uppercase">Optimizing...</span>
                    </div>
                </div>
            </div>

            <!-- RIGHT COLUMN: SIDEBAR CONTROLS -->
            <div class="col-lg-4">
                <div class="sidebar-sticky">
                    <div class="card border-0 shadow-sm rounded-4 p-4 mb-4 bg-white">
                        <h5 class="fw-bold mb-4 d-flex align-items-center">
                            <i class="fa-solid fa-sliders me-2 text-primary"></i> Settings
                        </h5>
                        
                        <div class="mb-4">
                            <label class="small fw-bold text-muted d-flex justify-content-between mb-2">
                                Compression Level <span id="qVal" class="text-primary">70%</span>
                            </label>
                            <input type="range" id="qIn" class="form-range" min="0.1" max="1" step="0.1" value="0.7">
                            <div class="d-flex justify-content-between extra-small text-muted mt-1">
                                <span>Small File</span>
                                <span>High Quality</span>
                            </div>
                        </div>

                        <button id="btnAction" class="btn btn-lg w-100 text-white rounded-pill py-3 fw-bold shadow-sm border-0 mb-3" style={`background: ${entry.data.color}`}>
                            Compress Image
                        </button>
                        
                        <p class="extra-small text-center text-muted">Original Size: <span id="oldSize">0 KB</span></p>
                    </div>

                    <!-- INTERNAL LINKING: iLoveIMG Style -->
                    <div class="card border-0 shadow-sm rounded-4 p-4 bg-white d-none d-lg-block">
                        <p class="extra-small fw-bold text-muted uppercase mb-3 letter-spacing-1">Popular Tools</p>
                        <div class="row g-2">
                            {relatedTools.map(t => (
                                <div class="col-6">
                                    <a href={`/${t.slug || t.id}`} class="text-decoration-none small text-dark d-flex align-items-center p-2 border rounded-3 sidebar-tool-link">
                                        <i class={`fa-solid ${t.data.icon} me-2`} style={`color: ${t.data.color}`}></i>
                                        <span class="text-truncate">{t.data.title.split(' ')[0]}</span>
                                    </a>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- STEP 3: SUCCESS RESULT (Refined) -->
    <div id="resultArea" style="display:none;" class="text-center py-5 fade-in">
        <div class="result-card card bg-white mx-auto shadow-lg p-5 rounded-5 border-0" style="max-width: 600px;">
            <div class="success-badge mb-4"><i class="fa-solid fa-circle-check"></i></div>
            <h2 class="fw-black mb-3">Download Ready!</h2>
            <div id="savingsSummary" class="alert alert-success border-0 rounded-4 mb-4 small fw-bold"></div>

            <div class="d-flex gap-2 flex-wrap justify-content-center">
                <a id="downloadBtn" class="btn btn-dark px-4 py-2 rounded-pill fw-bold shadow-sm d-flex align-items-center">
                    <i class="fa-solid fa-download me-2"></i> Download Image
                </a>
                <button class="btn btn-outline-secondary px-4 py-2 rounded-pill border-2 fw-bold d-flex align-items-center" onclick="location.reload()">
                    <i class="fa-solid fa-rotate-left me-2"></i> Start Over
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    /* --- NEW WORKSPACE UI --- */
    .workspace-stage { min-height: 500px; }
    .image-viewport { 
        min-height: 450px; 
        background: #f8fafc; 
        background-image: radial-gradient(#e2e8f0 1px, transparent 1px);
        background-size: 20px 20px;
    }
    .workspace-img { 
        max-height: 400px; /* FIXED: Prevents "very large" image */
        border-radius: 8px;
        object-fit: contain;
    }
    .sidebar-sticky { position: sticky; top: 100px; }
    .sidebar-tool-link { transition: 0.2s; background: #fff; }
    .sidebar-tool-link:hover { background: #f8fbff; border-color: #4B90FF !important; }
    .extra-small { font-size: 0.7rem; font-weight: 700; letter-spacing: 0.5px; }
    .letter-spacing-1 { letter-spacing: 1px; }

    .loader-overlay {
        position: absolute; top:0; left:0; width:100%; height:100%;
        background: rgba(255,255,255,0.8); z-index: 10;
        display: flex; flex-direction: column; align-items: center; justify-content: center;
    }

    /* Success Badge */
    .success-badge { width: 70px; height: 70px; background: #ecfdf5; color: #10b981; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto; font-size: 2rem; }
</style>

<script is:inline>
    const fileInput = document.getElementById('fileInput');
    const uploadContainer = document.getElementById('uploadContainer');
    const processingArea = document.getElementById('processingArea');
    const btnAction = document.getElementById('btnAction');
    const resultArea = document.getElementById('resultArea');
    const mainPreview = document.getElementById('mainPreview');
    const qIn = document.getElementById('qIn');
    const qVal = document.getElementById('qVal');
    const miniLoader = document.getElementById('miniLoader');

    let originalFile = null;

    function formatBytes(bytes) {
        if (bytes === 0) return '0 KB';
        const k = 1024;
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + ' ' + ['B', 'KB', 'MB'][i];
    }

    qIn.oninput = (e) => qVal.innerText = Math.round(e.target.value * 100) + '%';

    fileInput.addEventListener('change', (e) => {
        const file = e.target.files[0];
        if (file) {
            originalFile = file;
            const reader = new FileReader();
            reader.onload = (ev) => {
                mainPreview.src = ev.target.result;
                document.getElementById('oldSize').innerText = formatBytes(file.size);
                uploadContainer.style.display = 'none';
                processingArea.style.display = 'block';
            };
            reader.readAsDataURL(file);
        }
    });

    btnAction.addEventListener('click', async () => {
        miniLoader.classList.replace('d-none', 'd-flex');
        btnAction.disabled = true;

        try {
            const blob = await imageCompression(originalFile, { 
                maxSizeMB: 1, 
                initialQuality: parseFloat(qIn.value) 
            });

            const oldS = originalFile.size;
            const newS = blob.size;
            const saved = Math.round(((oldS - newS) / oldS) * 100);

            document.getElementById('savingsSummary').innerText = `Your image is now ${formatBytes(newS)}. You saved ${saved}% of file size!`;
            
            const url = URL.createObjectURL(blob);
            document.getElementById('downloadBtn').href = url;
            document.getElementById('downloadBtn').download = `compressed-${originalFile.name}`;
            
            setTimeout(() => {
                processingArea.style.display = 'none';
                resultArea.style.display = 'block';
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }, 800);

        } catch (e) {
            alert("Error");
            miniLoader.classList.replace('d-flex', 'd-none');
            btnAction.disabled = false;
        }
    });
</script>
