---
const { entry, relatedTools } = Astro.props;
---

<div id="compress-app-root" class="tool-app-shell">
    <!-- 1. INITIAL UPLOADER (Minimalist & Centered) -->
    <div id="uploadContainer" class="uploader-fullscreen">
        <div class="uploader-center-card shadow-2xl" onclick="document.getElementById('fileInput').click()">
            <div class="uploader-dashed">
                <div class="icon-pulse mb-4" style={`background: ${entry.data.color}`}>
                    <i class={`fa-solid ${entry.data.icon}`}></i>
                </div>
                <h2 class="fw-bold h3 mb-2">Select Images</h2>
                <p class="text-muted small">JPG, PNG, WEBP, or SVG â€¢ Batch up to 20 files</p>
                <button class="btn btn-dark rounded-pill px-5 py-2 mt-3 shadow-sm border-0">Browse Files</button>
                <input type="file" id="fileInput" hidden accept="image/*" multiple />
            </div>
        </div>
    </div>

    <!-- 2. PROFESSIONAL WORKSPACE (App Layout) -->
    <div id="processingArea" class="app-workspace fade-in" style="display:none;">
        
        <!-- THE STAGE (Left/Center Side) -->
        <div class="editor-main">
            <div class="stage-container shadow-inner">
                <div class="stage-header">
                    <span class="badge bg-dark rounded-pill" id="currentFileName">file.jpg</span>
                    <div class="stage-controls">
                        <button class="btn-stage-icon" onclick="window.toggleComparison()" title="Compare">
                            <i class="fa-solid fa-layer-group"></i>
                        </button>
                    </div>
                </div>

                <!-- Split-Screen Engine -->
                <div class="comparison-engine" id="compEngine">
                    <div class="img-wrapper original">
                        <img id="viewBefore" src="">
                        <div class="size-overlay left">ORIGINAL: <span id="labelOrig">0 KB</span></div>
                    </div>
                    <div class="img-wrapper compressed" id="compWrapper">
                        <img id="viewAfter" src="">
                        <div class="size-overlay right">OPTIMIZED: <span id="labelNew">0 KB</span></div>
                    </div>
                    <input type="range" class="comp-slider" id="compHandle" min="0" max="100" value="50">
                </div>

                <div id="miniLoader" class="stage-loader d-none">
                    <div class="spinner-border text-white"></div>
                    <p class="mt-3 text-white fw-bold">Calculating Pixels...</p>
                </div>
            </div>

            <!-- BATCH TRAY (Bottom) -->
            <div class="batch-tray custom-scrollbar" id="batchTray">
                <!-- Thumbnails go here -->
            </div>
        </div>

        <!-- THE INSPECTOR (Right Side) -->
        <aside class="app-sidebar shadow-xl">
            <div class="sidebar-header border-bottom">
                <div class="savings-card text-center w-100 p-3 bg-primary bg-opacity-10 rounded-4">
                    <div class="display-5 fw-black text-primary" id="savingsPct">-0%</div>
                    <p class="extra-small fw-bold text-muted uppercase tracking-widest mb-0">Saved Size</p>
                </div>
            </div>

            <div class="sidebar-body p-4 scrollable">
                <div class="control-section mb-4">
                    <div class="d-flex justify-content-between mb-2">
                        <label class="small fw-bold">Quality Level</label>
                        <span id="qDisplay" class="badge bg-dark">70</span>
                    </div>
                    <input type="range" id="qIn" class="form-range custom-slider" min="1" max="100" value="70">
                    <div class="d-flex justify-content-between text-muted x-small mt-2">
                        <span>Smallest</span>
                        <span>Balanced</span>
                        <span>Best</span>
                    </div>
                </div>

                <div class="control-section mb-4 pt-3 border-top">
                    <label class="small fw-bold mb-2 d-block">Export Format</label>
                    <select id="exportFormat" class="form-select border-0 bg-light rounded-3">
                        <option value="original">Match Original</option>
                        <option value="image/webp">Next-Gen WebP</option>
                        <option value="image/jpeg">Standard JPEG</option>
                    </select>
                </div>

                <div class="d-grid gap-2 mb-4">
                    <button id="btnDownloadCurrent" class="btn btn-primary btn-lg rounded-pill py-3 fw-bold shadow-sm border-0">
                        <i class="fa-solid fa-download me-2"></i> Download Active
                    </button>
                    <button id="btnDownloadZip" class="btn btn-outline-dark rounded-pill py-2 fw-bold">
                        Download All (ZIP)
                    </button>
                </div>

                <div class="related-tray mt-auto">
                    <p class="extra-small fw-bold text-muted uppercase mb-3">Quick Tools</p>
                    <div class="row g-2">
                        {relatedTools.slice(0,4).map(t => (
                            <div class="col-6">
                                <a href={`/${t.slug || t.id}`} class="tray-link">
                                    <i class={`fa-solid ${t.data.icon}`} style={`color: ${t.data.color}`}></i>
                                    <span>{t.data.title.split(' ')[0]}</span>
                                </a>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </aside>
    </div>

    <!-- 3. FINAL SUCCESS (Simple overlay) -->
    <div id="resultArea" class="success-overlay fade-in" style="display:none;">
        <div class="success-content shadow-2xl p-5 rounded-5 text-center bg-white">
            <div class="check-lottie mb-4"><i class="fa-solid fa-circle-check text-success fa-5x"></i></div>
            <h2 class="fw-black mb-1">Files Processed!</h2>
            <p class="text-muted mb-4">Batch task successfully completed.</p>
            <button class="btn btn-dark rounded-pill px-5 py-3 fw-bold" onclick="location.reload()">Start New Batch</button>
        </div>
    </div>
</div>

<style>
    /* --- ZYN ENGINE APP SHELL STYLING --- */
    .fw-black { font-weight: 900; }
    .x-small { font-size: 0.7rem; }
    .extra-small { font-size: 0.65rem; font-weight: 800; letter-spacing: 1px; }

    .tool-app-shell {
        height: 80vh;
        margin-top: -60px;
        position: relative;
        z-index: 100;
    }

    /* Uploader Overlay */
    .uploader-fullscreen { height: 100%; display: flex; align-items: center; justify-content: center; }
    .uploader-center-card { background: white; border-radius: 40px; padding: 15px; width: 100%; max-width: 600px; }
    .uploader-dashed { border: 3px dashed #e2e8f0; border-radius: 32px; padding: 80px 20px; text-align: center; transition: 0.3s; }
    .uploader-dashed:hover { border-color: var(--primary-blue); background: #fcfdfe; }
    
    .icon-pulse { width: 80px; height: 80px; border-radius: 50%; margin: 0 auto; display: flex; align-items: center; justify-content: center; color: white; font-size: 2rem; position: relative; }

    /* App Layout */
    .app-workspace { display: flex; height: 100%; gap: 20px; }
    .editor-main { flex-grow: 1; display: flex; flex-direction: column; height: 100%; gap: 20px; }
    .stage-container { flex-grow: 1; background: #1a1c1e; border-radius: 32px; position: relative; overflow: hidden; display: flex; align-items: center; justify-content: center; }
    
    .app-sidebar { width: 350px; background: white; border-radius: 32px; display: flex; flex-direction: column; overflow: hidden; }
    .scrollable { overflow-y: auto; flex-grow: 1; }

    /* The Slider Engine */
    .comparison-engine { width: 100%; height: 100%; position: relative; }
    .img-wrapper { position: absolute; top:0; left:0; width:100%; height:100%; display: flex; align-items: center; justify-content: center; }
    .img-wrapper img { max-width: 90%; max-height: 90%; object-fit: contain; }
    .compressed { z-index: 2; border-right: 2px solid white; overflow: hidden; width: 50%; background: #1a1c1e; }
    .comp-slider { position: absolute; inset: 0; width: 100%; height: 100%; opacity: 0; z-index: 10; cursor: ew-resize; margin:0; }

    .size-overlay { position: absolute; bottom: 20px; background: rgba(255,255,255,0.9); color: #333; padding: 5px 15px; border-radius: 50px; font-weight: 800; font-size: 0.75rem; }
    .size-overlay.left { left: 20px; }
    .size-overlay.right { right: 20px; color: #10b981; }

    /* Batch Tray */
    .batch-tray { height: 110px; display: flex; gap: 12px; padding: 10px; background: white; border-radius: 24px; border: 1px solid #f1f5f9; overflow-x: auto; }
    .tray-thumb { width: 80px; height: 80px; border-radius: 12px; border: 2px solid #eee; cursor: pointer; flex-shrink: 0; }
    .tray-thumb.active { border-color: var(--primary-blue); border-width: 3px; }
    .tray-thumb img { width: 100%; height: 100%; object-fit: cover; border-radius: 9px; }

    /* Custom Slider */
    .custom-slider::-webkit-slider-thumb { width: 24px; height: 24px; background: var(--primary-blue); border: 4px solid #fff; box-shadow: 0 4px 10px rgba(0,0,0,0.1); appearance: none; border-radius: 50%; }

    /* Success Overlay */
    .success-overlay { position: fixed; inset:0; background: rgba(0,0,0,0.4); z-index: 9999; display: flex; align-items: center; justify-content: center; backdrop-filter: blur(10px); }
    .success-content { background: white; max-width: 500px; width: 90%; }

    @media (max-width: 991px) {
        .app-workspace { flex-direction: column; height: auto; }
        .app-sidebar { width: 100%; }
        .tool-app-shell { height: auto; }
        .stage-container { height: 400px; }
    }
</style>

<script is:inline>
    const fileInput = document.getElementById('fileInput');
    const uploadContainer = document.getElementById('uploadContainer');
    const processingArea = document.getElementById('processingArea');
    const batchTray = document.getElementById('batchTray');
    const viewBefore = document.getElementById('viewBefore');
    const viewAfter = document.getElementById('viewAfter');
    const compWrapper = document.getElementById('compWrapper');
    const compHandle = document.getElementById('compHandle');
    const qIn = document.getElementById('qIn');
    const qDisplay = document.getElementById('qDisplay');
    const miniLoader = document.getElementById('miniLoader');

    let queue = [];
    let activeIdx = 0;

    const formatSize = (b) => (b / 1024).toFixed(1) + ' KB';

    // --- RE-PROCESSING ENGINE ---
    async function reProcess() {
        const item = queue[activeIdx];
        viewBefore.src = item.origUrl;
        document.getElementById('labelOrig').innerText = formatSize(item.file.size);
        document.getElementById('currentFileName').innerText = item.file.name;
        
        miniLoader.classList.remove('d-none');
        
        try {
            const options = {
                maxSizeMB: 1,
                initialQuality: item.quality / 100,
                useWebWorker: true
            };
            const blob = await imageCompression(item.file, options);
            item.compBlob = blob;
            item.compUrl = URL.createObjectURL(blob);
            
            viewAfter.src = item.compUrl;
            document.getElementById('labelNew').innerText = formatSize(blob.size);
            
            const saved = Math.max(0, Math.round(((item.file.size - blob.size) / item.file.size) * 100));
            document.getElementById('savingsPct').innerText = `-${saved}%`;
        } catch (e) { console.error(e); }
        finally { miniLoader.classList.add('d-none'); }
    }

    // --- UPLOAD HANDLER ---
    fileInput.addEventListener('change', async (e) => {
        const files = Array.from(e.target.files);
        if (!files.length) return;

        uploadContainer.style.display = 'none';
        processingArea.style.display = 'flex';

        files.forEach((file, i) => {
            const item = { file, origUrl: URL.createObjectURL(file), quality: 70 };
            queue.push(item);

            const thumb = document.createElement('div');
            thumb.className = `tray-thumb ${i === 0 ? 'active' : ''}`;
            thumb.innerHTML = `<img src="${item.origUrl}">`;
            thumb.onclick = () => {
                activeIdx = i;
                document.querySelectorAll('.tray-thumb').forEach(t => t.classList.remove('active'));
                thumb.classList.add('active');
                qIn.value = item.quality;
                qDisplay.innerText = item.quality;
                reProcess();
            };
            batchTray.appendChild(thumb);
        });
        reProcess();
    });

    // --- SLIDER ENGINE ---
    compHandle.oninput = (e) => {
        compWrapper.style.width = e.target.value + '%';
    };

    let debounce;
    qIn.oninput = (e) => {
        qDisplay.innerText = e.target.value;
        queue[activeIdx].quality = parseInt(e.target.value);
        clearTimeout(debounce);
        debounce = setTimeout(reProcess, 400);
    };

    document.getElementById('btnDownloadCurrent').onclick = () => {
        const item = queue[activeIdx];
        if (!item.compBlob) return;
        const a = document.createElement('a');
        a.href = item.compUrl;
        a.download = `optimized-${item.file.name}`;
        a.click();
    };

    document.getElementById('btnDownloadZip').onclick = async () => {
        const zip = new JSZip();
        queue.forEach(item => {
            if (item.compBlob) zip.file(`optimized-${item.file.name}`, item.compBlob);
        });
        const blob = await zip.generateAsync({type:"blob"});
        const a = document.createElement('a');
        a.href = URL.createObjectURL(blob);
        a.download = "zyntool-batch.zip";
        a.click();
        document.getElementById('resultArea').style.display = 'flex';
    };
</script>
