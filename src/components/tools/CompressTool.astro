---
const { entry, relatedTools } = Astro.props;
---

<div id="compress-tool">
    <!-- STEP 1: UPLOAD BOX (Refined & Modern) -->
    <div id="uploadContainer" class="uploader-card shadow-2xl mb-5 bg-white mx-auto" style="max-width: 800px;">
        <div class="uploader-border-wrapper p-3"> 
            <div class="uploader-zone text-center" onclick="document.getElementById('fileInput').click()" style="cursor:pointer">
                <div class="icon-circle mb-4 mx-auto shadow-sm" style={`background: ${entry.data.color}10; color: ${entry.data.color}; width:90px; height:90px; border-radius:50%; display:flex; align-items:center; justify-content:center;`}>
                    <i class={`fa-solid ${entry.data.icon} fa-3x`}></i>
                </div>
                <h2 class="fw-bold text-dark h3 mb-2">Select Images</h2>
                <p class="text-muted small mb-4">or drop images here to optimize</p>
                <button class="btn btn-primary rounded-pill px-5 py-2 fw-bold shadow-lg border-0" style={`background: ${entry.data.color}`}>
                    Browse Files
                </button>
                <input type="file" id="fileInput" hidden accept="image/*" multiple />
            </div>
        </div>
    </div>

    <!-- STEP 2: WORKSPACE -->
    <div id="processingArea" style="display:none;" class="fade-in">
        <div class="row g-4 text-start">
            <div class="col-lg-8">
                <div class="preview-stage border bg-white rounded-4 overflow-hidden position-relative shadow-sm">
                    <div id="imgWrapper" class="d-flex align-items-center justify-content-center p-4" style="min-height: 400px; background: #f8fafc;">
                        <img id="mainPreview" src="" class="img-fluid rounded shadow-lg" style="max-height: 450px;">
                    </div>
                    <div id="internalLoader" class="loader-overlay d-none position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75 d-flex flex-column align-items-center justify-content-center text-white z-3">
                        <div class="spinner-border text-primary mb-3"></div>
                        <h5 class="fw-bold">Processing...</h5>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="options-card card p-4 border-0 shadow-lg rounded-4 bg-white sticky-top" style="top: 100px;">
                    <h5 class="fw-bold mb-4 d-flex align-items-center"><i class="fa-solid fa-sliders me-2 text-primary"></i> Settings</h5>
                    
                    <div class="mb-4">
                        <label class="small fw-bold text-muted d-flex justify-content-between mb-2">Compression Level <span id="qVal" class="text-primary">70%</span></label>
                        <input type="range" id="qIn" class="form-range" min="0.1" max="1" step="0.1" value="0.7">
                    </div>

                    <button id="btnAction" class="btn btn-lg w-100 text-white rounded-pill py-3 fw-bold shadow-lg border-0 mb-4" style={`background: ${entry.data.color}`}>
                        Optimize Image
                    </button>

                    <div class="related-tools-mini pt-3 border-top">
                        <p class="extra-small fw-bold text-muted mb-3 uppercase tracking-wider">Other Tools</p>
                        <div class="row g-2">
                            {relatedTools.map(t => (
                                <div class="col-6">
                                    <a href={`/${t.slug || t.id}`} class="text-decoration-none extra-small text-dark d-flex align-items-center p-2 border rounded-3 bg-light-hover transition">
                                        <i class={`fa-solid ${t.data.icon} me-2`} style={`color: ${t.data.color}`}></i>
                                        <span class="text-truncate">{t.data.title.split(' ')[0]}</span>
                                    </a>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- STEP 3: RESULT AREA -->
    <div id="resultArea" style="display:none;" class="text-center py-5 fade-in">
        <div class="result-card card bg-white mx-auto shadow-2xl p-5 rounded-5 border-0" style="max-width: 650px;">
            <div class="success-badge mb-4 mx-auto shadow-sm" style="width: 70px; height: 70px; background: #ecfdf5; color: #10b981; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 2rem;"><i class="fa-solid fa-circle-check"></i></div>
            <h2 class="fw-black mb-2 text-dark">Lighter than ever!</h2>
            
            <div id="savingsStats" class="row g-3 my-4 justify-content-center">
                <div class="col-4">
                    <div class="p-2 border rounded-4 bg-light text-center"><div class="small text-muted">Old</div><div id="oldSizeLabel" class="fw-bold small">0 KB</div></div>
                </div>
                <div class="col-4">
                    <div class="p-2 border rounded-4 bg-light text-center"><div class="small text-muted">New</div><div id="newSizeLabel" class="fw-bold text-success small">0 KB</div></div>
                </div>
                <div class="col-4">
                    <div class="p-2 border rounded-4 bg-primary text-white shadow-sm text-center"><div class="small opacity-75">Saved</div><div id="percentLabel" class="fw-bold">0%</div></div>
                </div>
            </div>

            <div class="d-flex gap-2 flex-wrap justify-content-center pt-2 mt-4">
                <a id="downloadBtn" class="btn btn-dark px-5 py-2 rounded-pill fw-bold shadow-xl d-flex align-items-center"><i class="fa-solid fa-download me-2"></i> Download Image</a>
                <button class="btn btn-outline-secondary px-4 py-2 rounded-pill border-2 fw-bold d-flex align-items-center" onclick="location.reload()"><i class="fa-solid fa-rotate-left me-2"></i> Try Another</button>
            </div>
        </div>
    </div>
</div>

<style>
    .shadow-2xl { box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15) !important; }
    .uploader-card { border-radius: 28px; transition: transform 0.3s ease; }
    .uploader-card:hover { transform: translateY(-4px); }
    .uploader-zone { border: 3px dashed #e2e8f0; border-radius: 22px; padding: 70px 20px; transition: 0.3s; }
    .uploader-zone:hover { border-color: var(--primary-blue); background: #fcfdfe; border-style: solid; }
    .bg-light-hover:hover { background: #f8faff; border-color: var(--primary-blue) !important; }
    .extra-small { font-size: 0.7rem; font-weight: 700; }
    .loader-overlay { border-radius: 24px; }
</style>

<script is:inline>
    // Logic remains identical to previous version (Aggressive compression + Stats calculation)
    const fileInput = document.getElementById('fileInput');
    const uploadContainer = document.getElementById('uploadContainer');
    const processingArea = document.getElementById('processingArea');
    const btnAction = document.getElementById('btnAction');
    const resultArea = document.getElementById('resultArea');
    const mainPreview = document.getElementById('mainPreview');
    const qIn = document.getElementById('qIn');
    const qVal = document.getElementById('qVal');
    const internalLoader = document.getElementById('internalLoader');

    let originalFile = null;

    function formatBytes(bytes) {
        if (bytes === 0) return '0 KB';
        const k = 1024;
        return parseFloat((bytes / k).toFixed(1)) + ' KB';
    }

    qIn.oninput = (e) => qVal.innerText = Math.round(e.target.value * 100) + '%';

    fileInput.addEventListener('change', (e) => {
        const file = e.target.files[0];
        if (file) {
            originalFile = file;
            const reader = new FileReader();
            reader.onload = (ev) => {
                mainPreview.src = ev.target.result;
                uploadContainer.style.display = 'none';
                processingArea.style.display = 'block';
            };
            reader.readAsDataURL(file);
        }
    });

    btnAction.addEventListener('click', async () => {
        internalLoader.classList.remove('d-none');
        btnAction.disabled = true;
        try {
            const blob = await imageCompression(originalFile, { maxSizeMB: 0.5, initialQuality: parseFloat(qIn.value), useWebWorker: true });
            document.getElementById('oldSizeLabel').innerText = formatBytes(originalFile.size);
            document.getElementById('newSizeLabel').innerText = formatBytes(blob.size);
            document.getElementById('percentLabel').innerText = Math.round(((originalFile.size - blob.size)/originalFile.size)*100) + '%';
            const url = URL.createObjectURL(blob);
            document.getElementById('downloadBtn').href = url;
            document.getElementById('downloadBtn').download = `zyntool-${originalFile.name}`;
            setTimeout(() => { processingArea.style.display = 'none'; resultArea.style.display = 'block'; }, 800);
        } catch (e) {
            alert("Error"); internalLoader.classList.add('d-none'); btnAction.disabled = false;
        }
    });
</script>
