const { entry } = Astro.props;
---

<div id="compress-engine">
    <!-- VIEW 1: SELECT BUTTON (Kept simple as requested) -->
    <div id="uploadContainer" class="py-5 text-center">
        <button class="btn-iloveimg-main shadow-lg" onclick="document.getElementById('fileInput').click()">
            Select images
        </button>
        <p class="mt-3 text-muted">or drop images here</p>
        <input type="file" id="fileInput" hidden accept="image/*" multiple />
    </div>

    <!-- VIEW 2: THE COMPACT WORKSPACE (The Fix for "Too Large" Images) -->
    <div id="processingArea" style="display:none;" class="fade-in">
        <div class="workspace-wrapper">
            <!-- Left: The Assets Area (Light Gray) -->
            <div class="assets-area">
                <div id="imageGrid" class="assets-grid">
                    <!-- Images will be injected here as small compact cards -->
                </div>
                
                <!-- Add More Floating Button -->
                <button class="btn-floating-plus shadow" onclick="document.getElementById('fileInput').click()">
                    <i class="fa-solid fa-plus"></i>
                </button>
            </div>

            <!-- Right: The Sidebar (White) -->
            <aside class="workspace-sidebar">
                <div class="sidebar-header">
                    <h3 class="fw-bold h5 mb-0">Compress images</h3>
                </div>
                <div class="sidebar-content">
                    <div class="pro-info-box">
                        All images will be compressed with the best quality and filesize ratio.
                    </div>
                </div>
                <div class="sidebar-footer">
                    <button id="btnAction" class="btn-process-action">
                        Compress IMAGES <i class="fa-solid fa-circle-arrow-right ms-2"></i>
                    </button>
                </div>
            </aside>
        </div>
    </div>

    <!-- VIEW 3: SUCCESS RESULT -->
    <div id="resultArea" style="display:none;" class="text-center py-5 fade-in">
        <h1 class="fw-bold text-dark mb-4 h2">Your IMAGES have been compressed!</h1>
        <a id="downloadBtn" class="btn-iloveimg-main d-inline-block text-decoration-none shadow-lg mb-4">
            Download compressed IMAGES
        </a>
        <div id="statsSummary" class="text-muted fw-bold"></div>
        <button class="btn btn-link text-decoration-none mt-4 text-primary fw-bold" onclick="location.reload()">
            <i class="fa-solid fa-rotate-left me-1"></i> Start a new batch
        </button>
    </div>
</div>

<style>
    /* --- iLoveIMG COLORS & SYSTEM --- */
    :root {
        --ilove-blue: #4b8df8;
        --ilove-gray-bg: #f3f3f7;
        --ilove-border: #e0e0e6;
    }

    /* Main Select Button */
    .btn-iloveimg-main {
        background-color: var(--ilove-blue);
        color: white; border: none; padding: 22px 70px;
        font-size: 2.2rem; font-weight: 700; border-radius: 12px;
        transition: 0.2s; cursor: pointer;
    }
    .btn-iloveimg-main:hover { background-color: #3b7dec; transform: scale(1.02); }

    /* THE APP SHELL (Workspace) */
    .workspace-wrapper {
        display: flex;
        background: #fff;
        border: 1px solid var(--ilove-border);
        border-radius: 12px;
        min-height: 500px;
        overflow: hidden;
        margin-top: -30px; /* Aligns closer to breadcrumbs */
    }

    .assets-area {
        flex-grow: 1;
        background-color: var(--ilove-gray-bg);
        padding: 30px;
        position: relative;
        overflow-y: auto;
    }

    /* THE FIX: Compact Grid and Cards */
    .assets-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 20px;
    }

    .asset-card {
        background: white;
        border: 1px solid #d1d1d6;
        border-radius: 8px;
        padding: 10px;
        height: 180px; /* Fixed height for consistency */
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        box-shadow: 0 4px 6px rgba(0,0,0,0.02);
        transition: transform 0.2s;
    }
    .asset-card:hover { transform: translateY(-3px); }

    .asset-card img {
        width: 100%;
        height: 120px; /* RESTRAINED SIZE: The image will never be "Too Big" */
        object-fit: contain;
        border-radius: 4px;
    }

    .asset-card span {
        font-size: 0.7rem;
        font-weight: 700;
        color: #555;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-top: 8px;
    }

    /* Sidebar Styling */
    .workspace-sidebar { width: 340px; border-left: 1px solid var(--ilove-border); display: flex; flex-direction: column; }
    .sidebar-header { padding: 25px; border-bottom: 1px solid var(--ilove-border); }
    .sidebar-content { padding: 25px; flex-grow: 1; }
    .sidebar-footer { padding: 0; }

    .btn-process-action {
        width: 100%; background-color: var(--ilove-blue); color: white; border: none;
        padding: 25px; font-size: 1.6rem; font-weight: 800; cursor: pointer; transition: 0.2s;
    }
    .btn-process-action:hover { background-color: #3b7dec; }

    .pro-info-box { background: #e8f1ff; color: #1a4da1; padding: 15px; border-radius: 8px; font-size: 0.85rem; font-weight: 600; line-height: 1.4; }

    .btn-floating-plus {
        position: absolute; bottom: 30px; right: 30px; width: 60px; height: 60px;
        background: var(--ilove-blue); color: white; border: none; border-radius: 50%;
        font-size: 1.5rem; display: flex; align-items: center; justify-content: center; cursor: pointer;
    }

    @media (max-width: 991px) {
        .workspace-wrapper { flex-direction: column; }
        .workspace-sidebar { width: 100%; border-left: none; border-top: 1px solid var(--ilove-border); }
        .btn-select-images { font-size: 1.5rem; padding: 15px 40px; }
    }
</style>

<script is:inline>
    const fileInput = document.getElementById('fileInput');
    const uploadContainer = document.getElementById('uploadContainer');
    const processingArea = document.getElementById('processingArea');
    const imageGrid = document.getElementById('imageGrid');
    const btnAction = document.getElementById('btnAction');
    const resultArea = document.getElementById('resultArea');

    let queue = [];

    fileInput.addEventListener('change', (e) => {
        const files = Array.from(e.target.files);
        if (files.length === 0) return;

        uploadContainer.style.display = 'none';
        processingArea.style.display = 'flex';
        
        // Hide global tool text for app feel
        const hText = document.getElementById('tool-header-text');
        if(hText) hText.style.display = 'none';

        files.forEach(file => {
            queue.push(file);
            const div = document.createElement('div');
            div.className = 'asset-card';
            div.innerHTML = `
                <img src="${URL.createObjectURL(file)}">
                <span title="${file.name}">${file.name}</span>
            `;
            imageGrid.appendChild(div);
        });
    });

    btnAction.addEventListener('click', async () => {
        btnAction.disabled = true;
        btnAction.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Processing...';

        let totalOld = 0; let totalNew = 0;
        const zip = new JSZip();

        for (const file of queue) {
            totalOld += file.size;
            try {
                // Aggressive engine logic
                const blob = await imageCompression(file, { maxSizeMB: 0.1, initialQuality: 0.65 });
                totalNew += blob.size;
                zip.file(`compressed-${file.name}`, blob);
            } catch (err) { totalNew += file.size; }
        }

        const zipBlob = await zip.generateAsync({ type: "blob" });
        const url = URL.createObjectURL(zipBlob);
        
        const savings = Math.round(((totalOld - totalNew) / totalOld) * 100);
        document.getElementById('statsSummary').innerHTML = `Images reduced from <b>${(totalOld/1024).toFixed(0)}KB</b> to <b>${(totalNew/1024).toFixed(0)}KB</b>. You saved <b>${savings}%</b>!`;
        
        document.getElementById('downloadBtn').href = url;
        document.getElementById('downloadBtn').download = "zyntool-images.zip";

        processingArea.style.display = 'none';
        resultArea.style.display = 'block';
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });
</script>
