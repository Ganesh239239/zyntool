---
const { entry } = Astro.props;
---

<div id="compress-engine">
    <!-- STEP 1: MINIMALIST UPLOADER (No card, no shadow, matches post background) -->
    <div id="uploadContainer" class="uploader-wrapper mx-auto" onclick="document.getElementById('fileInput').click()">
        <div class="inner-dashed-border">
            <div class="uploader-content">
                <div class="icon-circle mb-4" style={`background: ${entry.data.color}15; color: ${entry.data.color}`}>
                    <i class={`fa-solid ${entry.data.icon} fa-3x`}></i>
                </div>
                <h2 class="upload-title">Select Images</h2>
                <p class="upload-subtitle">or drop images here</p>
                <div class="mt-4">
                    <button class="btn-pro-action" style={`background: ${entry.data.color}`}>
                        Choose Files
                    </button>
                </div>
            </div>
        </div>
        <input type="file" id="fileInput" hidden accept="image/*" multiple />
    </div>

    <!-- STEP 2: WORKSPACE (Remains functional but clean) -->
    <div id="processingArea" style="display:none;" class="fade-in">
        <div class="app-workspace-shell">
            <div class="asset-gallery-area custom-scrollbar">
                <div id="imageGrid" class="asset-grid-flex"></div>
                <button class="btn-add-more shadow" onclick="document.getElementById('fileInput').click()">
                    <i class="fa-solid fa-plus"></i>
                </button>
            </div>

            <aside class="settings-sidebar">
                <div class="p-4 h-100 d-flex flex-column">
                    <h5 class="fw-bold mb-3">Compress images</h5>
                    <div class="info-alert mb-4">
                        Optimizing for best quality and smallest size.
                    </div>
                    <button id="btnAction" class="btn btn-primary btn-lg w-100 fw-bold py-3 mt-auto rounded-pill border-0" style={`background: ${entry.data.color}`}>
                        Compress Now
                    </button>
                </div>
            </aside>
        </div>
    </div>

    <!-- STEP 3: RESULT -->
    <div id="resultArea" style="display:none;" class="text-center py-5 fade-in">
        <h2 class="fw-bold mb-4">Success! Your images are compressed.</h2>
        <a id="downloadBtn" class="btn btn-primary btn-lg px-5 py-3 rounded-pill fw-bold shadow-lg mb-3 border-0" style={`background: ${entry.data.color}`}>
            Download Images
        </a>
        <div id="statsSummary" class="text-muted small fw-bold mt-2"></div>
    </div>
</div>

<style>
    /* --- THE MINIMALIST UPLOADER (NO CARD) --- */
    .uploader-wrapper {
        max-width: 850px;
        cursor: pointer;
        transition: transform 0.2s ease;
    }
    
    .uploader-wrapper:hover {
        transform: scale(1.01);
    }

    .inner-dashed-border {
        /* This is the only boundary, sitting directly on the gray background */
        border: 2px dashed #cbd5e1; 
        border-radius: 24px;
        padding: 80px 40px;
        transition: all 0.3s ease;
    }

    .uploader-wrapper:hover .inner-dashed-border {
        border-color: #4b8df8;
        background-color: rgba(255, 255, 255, 0.5); /* Subtle highlight on hover */
    }

    .uploader-content {
        text-align: center;
    }

    .icon-circle {
        width: 90px; height: 90px;
        margin: 0 auto;
        display: flex; align-items: center; justify-content: center;
        border-radius: 50%;
    }

    .upload-title {
        font-size: 2.2rem;
        font-weight: 800;
        color: #1e293b;
        letter-spacing: -1px;
    }

    .upload-subtitle {
        font-size: 1.1rem;
        color: #64748b;
        font-weight: 500;
    }

    .btn-pro-action {
        border: none;
        color: white;
        padding: 14px 40px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1.1rem;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    /* --- WORKSPACE STYLES (MATCHING ILOVEIMG) --- */
    .app-workspace-shell {
        display: flex;
        background: #fff;
        border-radius: 16px;
        border: 1px solid #e0e0e6;
        height: 600px;
        overflow: hidden;
    }

    .asset-gallery-area {
        flex-grow: 1;
        background-color: #f3f3f7;
        padding: 20px;
        position: relative;
        overflow-y: auto;
    }

    .settings-sidebar {
        width: 320px;
        background: white;
        border-left: 1px solid #e0e0e6;
    }

    .info-alert {
        background: #eef2ff;
        color: #4338ca;
        padding: 15px;
        border-radius: 12px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .asset-grid-flex {
        display: flex;
        flex-wrap: wrap;
    }

    /* Card styling for images after upload */
    #imageGrid :global(.image-preview-card) {
        margin: 6px;
        width: 198px;
        height: 244px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    #imageGrid :global(.image-preview-card img) {
        max-width: 150px;
        max-height: 150px;
        object-fit: contain;
    }

    .btn-add-more {
        position: absolute; bottom: 25px; right: 25px; width: 60px; height: 60px;
        background: #4b8df8; color: white; border: none; border-radius: 50%;
        font-size: 1.5rem; display: flex; align-items: center; justify-content: center;
    }

    .custom-scrollbar::-webkit-scrollbar { width: 6px; }
    .custom-scrollbar::-webkit-scrollbar-thumb { background: #d1d1d6; border-radius: 10px; }
    .fade-in { animation: fadeIn 0.4s ease-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>

<script is:inline>
    // Logic handles multiple files and ZIP generation
    const fileInput = document.getElementById('fileInput');
    const uploadContainer = document.getElementById('uploadContainer');
    const processingArea = document.getElementById('processingArea');
    const imageGrid = document.getElementById('imageGrid');
    const btnAction = document.getElementById('btnAction');
    const resultArea = document.getElementById('resultArea');

    let queue = [];

    fileInput.addEventListener('change', (e) => {
        const files = Array.from(e.target.files);
        if (files.length === 0) return;

        uploadContainer.style.display = 'none';
        processingArea.style.display = 'flex';

        files.forEach(file => {
            queue.push(file);
            const card = document.createElement('div');
            card.className = 'image-preview-card';
            card.innerHTML = `
                <img src="${URL.createObjectURL(file)}">
                <span style="font-size:10px; color: #999; margin-top:10px; font-weight:bold; text-transform:uppercase;">${file.name}</span>
            `;
            imageGrid.appendChild(card);
        });
    });

    btnAction.addEventListener('click', async () => {
        btnAction.disabled = true;
        btnAction.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> processing...';
        
        const zip = new JSZip();
        for (const file of queue) {
            try {
                const blob = await imageCompression(file, { maxSizeMB: 0.5, initialQuality: 0.7 });
                zip.file(`compressed-${file.name}`, blob);
            } catch (err) { zip.file(file.name, file); }
        }

        const content = await zip.generateAsync({ type: "blob" });
        const url = URL.createObjectURL(content);
        document.getElementById('downloadBtn').href = url;
        document.getElementById('downloadBtn').download = "zyntool-batch.zip";

        processingArea.style.display = 'none';
        resultArea.style.display = 'block';
    });
</script>
