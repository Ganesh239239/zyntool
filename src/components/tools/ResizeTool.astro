---
const { entry, relatedTools } = Astro.props;
---

<div id="resize-tool">
    <!-- STEP 1: UPLOAD -->
    <div id="uploadContainer" class="uploader-card shadow-lg p-3 mb-5 bg-white">
        <div class="uploader-zone text-center" onclick="document.getElementById('fileInput').click()" style="cursor:pointer">
            <div class="icon-circle mb-3 mx-auto" style={`background: ${entry.data.color}15; color: ${entry.data.color}; width:80px; height:80px; border-radius:50%; display:flex; align-items:center; justify-content:center;`}>
                <i class={`fa-solid ${entry.data.icon} fa-3x`}></i>
            </div>
            <h2 class="fw-bold">Select Images to Resize</h2>
            <p class="text-muted small">Resize JPG, PNG, SVG or GIF by defining new height and width pixels.</p>
            <input type="file" id="fileInput" hidden accept="image/*" />
        </div>
    </div>

    <!-- STEP 2: WORKSPACE -->
    <div id="processingArea" style="display:none;" class="fade-in">
        <div class="row g-4 text-start">
            <div class="col-lg-8">
                <div class="preview-stage border bg-white rounded-4 overflow-hidden position-relative">
                    <img id="mainPreview" src="" class="img-fluid main-preview-img">
                    <div id="internalLoader" class="loader-overlay d-none position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75 d-flex flex-column align-items-center justify-content-center text-white z-3">
                        <div class="spinner-border text-primary mb-3"></div>
                        <h5 class="fw-bold">Resizing...</h5>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="options-card card p-4 border-0 shadow-sm rounded-4 bg-white sticky-top" style="top: 100px;">
                    <h5 class="fw-bold mb-4">Resize Options</h5>
                    
                    <!-- REARHED FEATURE: UNIT SWITCHER -->
                    <ul class="nav nav-pills nav-fill mb-4 bg-light p-1 rounded-3" id="resizeTabs">
                        <li class="nav-item">
                            <button class="nav-link active py-2 small fw-bold" onclick="window.setResizeMode('pixel', this)">BY PIXELS</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link py-2 small fw-bold" onclick="window.setResizeMode('percent', this)">BY PERCENT</button>
                        </li>
                    </ul>

                    <!-- PIXEL INPUTS -->
                    <div id="pixelSettings">
                        <div class="mb-3">
                            <label class="small fw-bold text-muted mb-1">Width (px)</label>
                            <input type="number" id="widthIn" class="form-control" placeholder="Width">
                        </div>
                        <div class="mb-3">
                            <label class="small fw-bold text-muted mb-1">Height (px)</label>
                            <input type="number" id="heightIn" class="form-control" placeholder="Height">
                        </div>
                        <div class="form-check form-switch small mb-4">
                            <input class="form-check-input" type="checkbox" id="ratioLock" checked>
                            <label class="form-check-label">Maintain aspect ratio</label>
                        </div>
                    </div>

                    <!-- PERCENT INPUTS -->
                    <div id="percentSettings" style="display:none;">
                        <label class="small fw-bold text-muted mb-2">Select percentage</label>
                        <select id="pctSelect" class="form-select mb-4">
                            <option value="0.75">25% Smaller (75% of original)</option>
                            <option value="0.5" selected>50% Smaller (Half size)</option>
                            <option value="0.25">75% Smaller (Smallest)</option>
                        </select>
                    </div>

                    <button id="btnAction" class="btn btn-lg w-100 text-white rounded-pill py-3 fw-bold shadow-sm border-0 mb-4" style={`background: ${entry.data.color}`}>
                        Resize Image
                    </button>

                    <div class="related-tools-mini pt-3 border-top">
                        <p class="small fw-bold text-muted mb-3">Other Tools</p>
                        <div class="row g-2">
                            {relatedTools.map(t => (
                                <div class="col-6">
                                    <a href={`/${t.slug || t.id}`} class="text-decoration-none small text-dark d-flex align-items-center p-2 border rounded-3 bg-light-hover transition">
                                        <i class={`fa-solid ${t.data.icon} me-2`} style={`color: ${t.data.color}`}></i>
                                        <span class="text-truncate">{t.data.title.split(' ')[0]}</span>
                                    </a>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- STEP 3: RESULT -->
    <div id="resultArea" style="display:none;" class="text-center py-5 fade-in">
        <div class="result-card card bg-white mx-auto shadow-lg p-5 rounded-5 border-0" style="max-width: 600px;">
            <div class="success-badge mb-4"><i class="fa-solid fa-circle-check"></i></div>
            <h2 class="fw-black mb-3">Image Resized!</h2>
            <p class="text-muted mb-4">Your image has been resized to the exact dimensions requested.</p>

            <div class="d-flex gap-2 flex-wrap justify-content-center pt-2">
                <a id="downloadBtn" class="btn btn-dark px-4 py-2 rounded-pill fw-bold shadow-sm d-flex align-items-center">
                    <i class="fa-solid fa-download me-2"></i> Download Image
                </a>
                <button class="btn btn-outline-secondary px-4 py-2 rounded-pill border-2 fw-bold d-flex align-items-center" onclick="location.reload()">
                    <i class="fa-solid fa-rotate-left me-2"></i> Resize Another
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .uploader-card { border-radius: 30px; border: 1px solid #eee; }
    .uploader-zone { border: 2px dashed #e2e8f0; border-radius: 24px; padding: 60px 20px; transition: 0.3s; }
    .uploader-zone:hover { background: #f8fbff; border-color: #4B90FF; }
    .preview-stage { min-height: 400px; display: flex; align-items: center; justify-content: center; border: 1px solid #f0f0f0; }
    .main-preview-img { max-height: 60vh; }
    .bg-light-hover:hover { background: #f8f9fa; border-color: #4B90FF !important; }
    .nav-pills .nav-link { color: #666; transition: 0.2s; }
    .nav-pills .nav-link.active { background-color: #2c2e33 !important; color: #fff; }
    .success-badge { width: 60px; height: 60px; background: #ecfdf5; color: #10b981; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto; font-size: 1.8rem; }
</style>

<script is:inline>
    const fileInput = document.getElementById('fileInput');
    const uploadContainer = document.getElementById('uploadContainer');
    const processingArea = document.getElementById('processingArea');
    const btnAction = document.getElementById('btnAction');
    const resultArea = document.getElementById('resultArea');
    const mainPreview = document.getElementById('mainPreview');
    const internalLoader = document.getElementById('internalLoader');
    
    // Resize Inputs
    const widthIn = document.getElementById('widthIn');
    const heightIn = document.getElementById('heightIn');
    const ratioLock = document.getElementById('ratioLock');
    const pctSelect = document.getElementById('pctSelect');

    let originalFile = null;
    let originalWidth = 0;
    let originalHeight = 0;
    let mode = 'pixel';

    // Global: Switch between Pixel/Percent
    window.setResizeMode = (m, btn) => {
        mode = m;
        document.querySelectorAll('#resizeTabs button').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        document.getElementById('pixelSettings').style.display = m === 'pixel' ? 'block' : 'none';
        document.getElementById('percentSettings').style.display = m === 'percent' ? 'block' : 'none';
    };

    // Global: Smart Dimension Calculation (Aspect Ratio)
    widthIn.oninput = () => {
        if(ratioLock.checked && originalWidth) {
            heightIn.value = Math.round(widthIn.value / (originalWidth / originalHeight));
        }
    };
    heightIn.oninput = () => {
        if(ratioLock.checked && originalHeight) {
            widthIn.value = Math.round(heightIn.value * (originalWidth / originalHeight));
        }
    };

    fileInput.addEventListener('change', (e) => {
        const file = e.target.files[0];
        if (file) {
            originalFile = file;
            const reader = new FileReader();
            reader.onload = (ev) => {
                const img = new Image();
                img.onload = () => {
                    originalWidth = img.width;
                    originalHeight = img.height;
                    widthIn.value = img.width;
                    heightIn.value = img.height;
                    mainPreview.src = ev.target.result;
                    uploadContainer.style.display = 'none';
                    processingArea.style.display = 'block';
                };
                img.src = ev.target.result;
            };
            reader.readAsDataURL(file);
        }
    });

    btnAction.addEventListener('click', async () => {
        internalLoader.classList.remove('d-none');
        btnAction.disabled = true;

        try {
            let finalWidth;
            if (mode === 'pixel') {
                finalWidth = parseInt(widthIn.value);
            } else {
                finalWidth = Math.round(originalWidth * parseFloat(pctSelect.value));
            }

            const blob = await imageCompression(originalFile, { 
                maxWidthOrHeight: finalWidth,
                useWebWorker: true
            });

            const url = URL.createObjectURL(blob);
            const dlBtn = document.getElementById('downloadBtn');
            dlBtn.href = url;
            dlBtn.download = `resized-${originalFile.name}`;
            
            setTimeout(() => {
                processingArea.style.display = 'none';
                resultArea.style.display = 'block';
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }, 800);

        } catch (e) {
            alert("Resize failed.");
            internalLoader.classList.add('d-none');
            btnAction.disabled = false;
        }
    });
</script>
