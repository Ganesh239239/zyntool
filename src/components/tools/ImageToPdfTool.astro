---
const { entry, relatedTools } = Astro.props;
---
<div id="image-to-pdf-tool">
    <!-- STEP 1: UPLOAD (Fixed UI) -->
    <div id="uploadContainer" class="uploader-card shadow-lg mb-5 bg-white mx-auto" style="max-width: 800px;">
        <div class="uploader-border-wrapper p-3"> 
            <div class="uploader-zone text-center" onclick="document.getElementById('fileInput').click()" style="cursor:pointer">
                <div class="icon-circle mb-3 mx-auto" style={`background: ${entry.data.color}15; color: ${entry.data.color}; width:80px; height:80px; border-radius:50%; display:flex; align-items:center; justify-content:center;`}>
                    <i class={`fa-solid ${entry.data.icon} fa-3x`}></i>
                </div>
                <h2 class="fw-bold text-dark">Select Images</h2>
                <p class="text-muted small">JPG, PNG, or WebP images to PDF.</p>
                <input type="file" id="fileInput" hidden accept="image/*" multiple />
            </div>
        </div>
    </div>

    <!-- STEP 2: WORKSPACE -->
    <div id="processingArea" style="display:none;" class="fade-in">
        <div class="row g-4 text-start">
            <div class="col-lg-8">
                <div class="preview-stage border bg-white rounded-4 p-4 overflow-auto" style="max-height: 550px;">
                    <div id="imageGridPreview" class="row g-3">
                        <!-- Thumbnails injected here -->
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="options-card card p-4 border-0 shadow-sm rounded-4 bg-white sticky-top" style="top: 100px;">
                    <h5 class="fw-bold mb-4">PDF Options</h5>
                    <div class="mb-4">
                        <label class="small fw-bold text-muted mb-2">Orientation</label>
                        <select id="pdfOrient" class="form-select mb-3">
                            <option value="p">Portrait (A4)</option>
                            <option value="l">Landscape (A4)</option>
                        </select>
                    </div>

                    <button id="btnAction" class="btn btn-lg w-100 text-white rounded-pill py-3 fw-bold shadow-sm border-0 mb-4" style={`background: ${entry.data.color}`}>
                        Convert to PDF
                    </button>

                    <div class="related-tools-mini pt-3 border-top">
                        <p class="small fw-bold text-muted mb-3 uppercase">Other Tools</p>
                        <div class="row g-2">
                            {relatedTools.map(t => (
                                <div class="col-6">
                                    <a href={`/${t.slug || t.id}`} class="text-decoration-none small text-dark d-flex align-items-center p-2 border rounded-3 bg-light-hover transition">
                                        <i class={`fa-solid ${t.data.icon} me-2`} style={`color: ${t.data.color}`}></i>
                                        <span class="text-truncate">{t.data.title.split(' ')[0]}</span>
                                    </a>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- STEP 3: RESULT -->
    <div id="resultArea" style="display:none;" class="text-center py-5 fade-in">
        <div class="result-card card bg-white mx-auto shadow-lg p-5 rounded-5 border-0" style="max-width: 650px;">
            <div class="success-badge mb-4" style="width:60px; height:60px; background:#fff1f0; color:#f44336; border-radius:50%; display:flex; align-items:center; justify-content:center; margin:0 auto; font-size:1.8rem"><i class="fa-solid fa-file-pdf"></i></div>
            <h2 class="fw-black mb-3 text-dark">PDF Created!</h2>
            <div class="d-flex gap-2 flex-wrap justify-content-center pt-2">
                <a id="downloadBtn" class="btn btn-dark px-4 py-2 rounded-pill fw-bold shadow-sm d-flex align-items-center">
                    <i class="fa-solid fa-download me-2"></i> Download PDF
                </a>
                <button class="btn btn-outline-secondary px-4 py-2 rounded-pill border-2 fw-bold d-flex align-items-center" onclick="location.reload()">
                    <i class="fa-solid fa-rotate-left me-2"></i> Convert More
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .uploader-card { border-radius: 24px; overflow: visible; }
    .uploader-zone { border: 3px dashed #cbd5e1; border-radius: 20px; padding: 80px 20px; transition: 0.3s; background: #fff; }
    .uploader-zone:hover { border-color: #4B90FF; background: #f8faff; }
    .preview-stage { min-height: 400px; display: flex; align-items: center; justify-content: center; border: 1px solid #f0f0f0; background: #ffffff; }
    .bg-light-hover:hover { background: #f8f9fa; border-color: #4B90FF !important; }
</style>

<script is:inline>
    const fileInput = document.getElementById('fileInput');
    const imageGrid = document.getElementById('imageGridPreview');
    let selectedImages = [];

    fileInput.addEventListener('change', (e) => {
        const files = Array.from(e.target.files);
        if(files.length === 0) return;
        selectedImages = files;
        document.getElementById('uploadContainer').style.display = 'none';
        document.getElementById('processingArea').style.display = 'block';
        files.forEach(file => {
            const col = document.createElement('div');
            col.className = 'col-4 col-md-3';
            col.innerHTML = `<img src="${URL.createObjectURL(file)}" class="img-fluid rounded border shadow-sm">`;
            imageGrid.appendChild(col);
        });
    });

    document.getElementById('btnAction').addEventListener('click', async () => {
        const { jsPDF } = window.jspdf;
        const orient = document.getElementById('pdfOrient').value;
        const doc = new jsPDF(orient, 'px', 'a4');
        const pw = doc.internal.pageSize.getWidth();
        const ph = doc.internal.pageSize.getHeight();
        for (let i = 0; i < selectedImages.length; i++) {
            if (i > 0) doc.addPage();
            const data = await new Promise(r => {
                const reader = new FileReader();
                reader.onload = (ev) => r(ev.target.result);
                reader.readAsDataURL(selectedImages[i]);
            });
            doc.addImage(data, 'JPEG', 20, 20, pw - 40, ph - 40);
        }
        const url = URL.createObjectURL(doc.output('blob'));
        document.getElementById('downloadBtn').href = url;
        document.getElementById('downloadBtn').download = "zyntool.pdf";
        document.getElementById('processingArea').style.display = 'none';
        document.getElementById('resultArea').style.display = 'block';
    });
</script>
