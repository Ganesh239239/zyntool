---
const { entry, relatedTools } = Astro.props;
---

<div id="watermark-tool">
    <!-- STEP 1: UPLOAD -->
    <div id="uploadContainer" class="uploader-card shadow-lg p-3 mb-5 bg-white">
        <div class="uploader-zone text-center" onclick="document.getElementById('fileInput').click()" style="cursor:pointer">
            <div class="icon-circle mb-3 mx-auto" style={`background: ${entry.data.color}15; color: ${entry.data.color}; width:80px; height:80px; border-radius:50%; display:flex; align-items:center; justify-content:center;`}>
                <i class={`fa-solid ${entry.data.icon} fa-3x`}></i>
            </div>
            <h2 class="fw-bold">Select Images to Watermark</h2>
            <p class="text-muted small">Stamp your text or logo over JPG, PNG or GIF images.</p>
            <input type="file" id="fileInput" hidden accept="image/*" />
        </div>
    </div>

    <!-- STEP 2: WORKSPACE -->
    <div id="processingArea" style="display:none;" class="fade-in">
        <div class="row g-4 text-start">
            <div class="col-lg-8">
                <div class="preview-stage border bg-white rounded-4 overflow-hidden position-relative">
                    <div id="canvasWrapper" style="max-width: 100%; display: flex; align-items: center; justify-content: center;">
                         <img id="mainPreview" src="" class="img-fluid main-preview-img">
                    </div>
                    <div id="internalLoader" class="loader-overlay d-none position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75 d-flex flex-column align-items-center justify-content-center text-white z-3">
                        <div class="spinner-border text-primary mb-3"></div>
                        <h5 class="fw-bold">Applying Watermark...</h5>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="options-card card p-4 border-0 shadow-sm rounded-4 bg-white sticky-top" style="top: 100px;">
                    <h5 class="fw-bold mb-4">Watermark Options</h5>
                    
                    <!-- TEXT INPUT -->
                    <label class="small fw-bold text-muted mb-2">Watermark Text</label>
                    <input type="text" id="wmText" class="form-control mb-4" placeholder="e.g. © ZynTool 2025">

                    <!-- POSITION GRID -->
                    <label class="small fw-bold text-muted mb-2">Position</label>
                    <div class="wm-grid mb-4">
                        <div class="wm-dot" onclick="window.setWMPos('tl', this)"></div>
                        <div class="wm-dot" onclick="window.setWMPos('tc', this)"></div>
                        <div class="wm-dot" onclick="window.setWMPos('tr', this)"></div>
                        <div class="wm-dot" onclick="window.setWMPos('cl', this)"></div>
                        <div class="wm-dot active" onclick="window.setWMPos('c', this)"></div>
                        <div class="wm-dot" onclick="window.setWMPos('cr', this)"></div>
                        <div class="wm-dot" onclick="window.setWMPos('bl', this)"></div>
                        <div class="wm-dot" onclick="window.setWMPos('bc', this)"></div>
                        <div class="wm-dot" onclick="window.setWMPos('br', this)"></div>
                    </div>

                    <!-- OPACITY -->
                    <label class="small fw-bold text-muted mb-2 d-flex justify-content-between">
                        Transparency <span id="opVal">50%</span>
                    </label>
                    <input type="range" id="wmOpacity" class="form-range mb-4" min="0.1" max="1" step="0.1" value="0.5">

                    <button id="btnAction" class="btn btn-lg w-100 text-white rounded-pill py-3 fw-bold shadow-sm border-0 mb-4" style={`background: ${entry.data.color}`}>
                        Watermark Image
                    </button>

                    <div class="related-tools-mini pt-3 border-top">
                        <p class="small fw-bold text-muted mb-3">Other Tools</p>
                        <div class="row g-2">
                            {relatedTools.map(t => (
                                <div class="col-6">
                                    <a href={`/${t.slug || t.id}`} class="text-decoration-none small text-dark d-flex align-items-center p-2 border rounded-3 bg-light-hover transition">
                                        <i class={`fa-solid ${t.data.icon} me-2`} style={`color: ${t.data.color}`}></i>
                                        <span class="text-truncate">{t.data.title.split(' ')[0]}</span>
                                    </a>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- STEP 3: RESULT -->
    <div id="resultArea" style="display:none;" class="text-center py-5 fade-in">
        <div class="result-card card bg-white mx-auto shadow-lg p-5 rounded-5 border-0" style="max-width: 600px;">
            <div class="success-badge mb-4"><i class="fa-solid fa-circle-check"></i></div>
            <h2 class="fw-black mb-3">Watermark Added!</h2>
            <p class="text-muted mb-4">Your image has been stamped and is ready for download.</p>

            <div class="d-flex gap-2 flex-wrap justify-content-center pt-2">
                <a id="downloadBtn" class="btn btn-dark px-4 py-2 rounded-pill fw-bold shadow-sm d-flex align-items-center">
                    <i class="fa-solid fa-download me-2"></i> Download Now
                </a>
                <button class="btn btn-outline-secondary px-4 py-2 rounded-pill border-2 fw-bold d-flex align-items-center" onclick="location.reload()">
                    <i class="fa-solid fa-rotate-left me-2"></i> Process Another
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .uploader-card { border-radius: 30px; border: 1px solid #eee; }
    .uploader-zone { border: 2px dashed #e2e8f0; border-radius: 24px; padding: 60px 20px; transition: 0.3s; }
    .uploader-zone:hover { background: #f8fbff; border-color: #4B90FF; }
    .preview-stage { min-height: 400px; display: flex; align-items: center; justify-content: center; border: 1px solid #f0f0f0; }
    .main-preview-img { max-height: 60vh; box-shadow: 0 10px 30px rgba(0,0,0,0.05); }
    
    /* Position Grid */
    .wm-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 8px; width: 100%; max-width: 150px; margin: 0 auto; }
    .wm-dot { height: 35px; border: 2px solid #e2e8f0; background: #fff; cursor: pointer; border-radius: 6px; transition: 0.2s; }
    .wm-dot:hover { border-color: var(--primary-blue); background: #f8fbff; }
    .wm-dot.active { background: #2c2e33; border-color: #2c2e33; }

    .bg-light-hover:hover { background: #f8f9fa; border-color: #4B90FF !important; }
    .success-badge { width: 60px; height: 60px; background: #ecfdf5; color: #10b981; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto; font-size: 1.8rem; }
</style>

<script is:inline>
    const fileInput = document.getElementById('fileInput');
    const uploadContainer = document.getElementById('uploadContainer');
    const processingArea = document.getElementById('processingArea');
    const btnAction = document.getElementById('btnAction');
    const resultArea = document.getElementById('resultArea');
    const mainPreview = document.getElementById('mainPreview');
    const internalLoader = document.getElementById('internalLoader');
    const wmText = document.getElementById('wmText');
    const wmOpacity = document.getElementById('wmOpacity');
    const opVal = document.getElementById('opVal');

    let originalFile = null;
    window.wmPos = 'c';

    // Global: Position Switcher
    window.setWMPos = (pos, btn) => {
        window.wmPos = pos;
        document.querySelectorAll('.wm-dot').forEach(d => d.classList.remove('active'));
        btn.classList.add('active');
    };

    wmOpacity.oninput = (e) => opVal.innerText = Math.round(e.target.value * 100) + '%';

    fileInput.addEventListener('change', (e) => {
        const file = e.target.files[0];
        if (file) {
            originalFile = file;
            const reader = new FileReader();
            reader.onload = (ev) => {
                mainPreview.src = ev.target.result;
                uploadContainer.style.display = 'none';
                processingArea.style.display = 'block';
            };
            reader.readAsDataURL(file);
        }
    });

    btnAction.addEventListener('click', async () => {
        internalLoader.classList.remove('d-none');
        btnAction.disabled = true;

        try {
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            const img = new Image();
            img.src = mainPreview.src;
            await new Promise(r => img.onload = r);

            canvas.width = img.width;
            canvas.height = img.height;
            ctx.drawImage(img, 0, 0);

            // Watermark Styling
            const text = wmText.value || '© ZynTool';
            const opacity = parseFloat(wmOpacity.value);
            const fontSize = Math.round(canvas.width / 20);
            
            ctx.globalAlpha = opacity;
            ctx.fillStyle = "white";
            ctx.strokeStyle = "rgba(0,0,0,0.3)";
            ctx.lineWidth = fontSize / 10;
            ctx.font = `bold ${fontSize}px Inter, sans-serif`;
            ctx.textAlign = "center";
            ctx.textBaseline = "middle";

            // iLoveIMG 9-Point Positioning Logic
            let x = canvas.width / 2;
            let y = canvas.height / 2;
            let padding = canvas.width * 0.05;

            // Horizontal
            if (window.wmPos.includes('l')) { x = padding; ctx.textAlign = "left"; }
            if (window.wmPos.includes('r')) { x = canvas.width - padding; ctx.textAlign = "right"; }
            
            // Vertical
            if (window.wmPos.includes('t')) { y = padding; ctx.textBaseline = "top"; }
            if (window.wmPos.includes('b')) { y = canvas.height - padding; ctx.textBaseline = "bottom"; }

            ctx.strokeText(text, x, y);
            ctx.fillText(text, x, y);

            canvas.toBlob((blob) => {
                const url = URL.createObjectURL(blob);
                const dlBtn = document.getElementById('downloadBtn');
                dlBtn.href = url;
                dlBtn.download = `watermarked-${originalFile.name}`;
                
                setTimeout(() => {
                    processingArea.style.display = 'none';
                    resultArea.style.display = 'block';
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                }, 800);
            }, 'image/png');

        } catch (e) {
            alert("Watermark failed.");
            internalLoader.classList.add('d-none');
            btnAction.disabled = false;
        }
    });
</script>
