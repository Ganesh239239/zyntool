---
const { entry, relatedTools } = Astro.props;
---

<div id="photo-editor-tool">
    <!-- STEP 1: UPLOAD BOX -->
    <div id="uploadContainer" class="uploader-card shadow-lg p-3 mb-5 bg-white border">
        <div class="uploader-zone text-center" onclick="document.getElementById('fileInput').click()" style="cursor:pointer">
            <div class="icon-circle mb-3 mx-auto" style={`background: ${entry.data.color}15; color: ${entry.data.color}; width:80px; height:80px; border-radius:50%; display:flex; align-items:center; justify-content:center;`}>
                <i class={`fa-solid ${entry.data.icon} fa-3x`}></i>
            </div>
            <h2 class="fw-bold">Upload Photo to Edit</h2>
            <p class="text-muted small">Enhance your photos with filters and precise adjustments.</p>
            <input type="file" id="fileInput" hidden accept="image/*" />
        </div>
    </div>

    <!-- STEP 2: WORKSPACE -->
    <div id="processingArea" style="display:none;" class="fade-in">
        <div class="row g-4 text-start">
            <div class="col-lg-8">
                <div class="preview-stage border bg-white rounded-4 overflow-hidden position-relative">
                    <!-- Image Wrapper to apply CSS filters for live preview -->
                    <div id="editWrapper" class="w-100 h-100 d-flex align-items-center justify-content-center">
                        <img id="mainPreview" src="" class="img-fluid main-preview-img" style="transition: filter 0.1s ease;">
                    </div>
                    
                    <div id="internalLoader" class="loader-overlay d-none position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75 d-flex flex-column align-items-center justify-content-center text-white z-3">
                        <div class="spinner-border text-primary mb-3"></div>
                        <h5 class="fw-bold">Exporting Photo...</h5>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="options-card card p-4 border-0 shadow-sm rounded-4 bg-white sticky-top" style="top: 100px;">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="fw-bold m-0">Editor Controls</h5>
                        <button class="btn btn-link btn-sm text-decoration-none p-0 fw-bold" onclick="window.resetFilters()">Reset All</button>
                    </div>

                    <!-- ADJUSTMENTS -->
                    <div class="mb-4">
                        <label class="small fw-bold text-muted mb-2 d-flex justify-content-between">
                            Brightness <span id="val-bright">100%</span>
                        </label>
                        <input type="range" id="in-bright" class="form-range filter-input" min="0" max="200" value="100">
                        
                        <label class="small fw-bold text-muted mt-3 mb-2 d-flex justify-content-between">
                            Contrast <span id="val-contrast">100%</span>
                        </label>
                        <input type="range" id="in-contrast" class="form-range filter-input" min="0" max="200" value="100">

                        <label class="small fw-bold text-muted mt-3 mb-2 d-flex justify-content-between">
                            Saturation <span id="val-saturate">100%</span>
                        </label>
                        <input type="range" id="in-saturate" class="form-range filter-input" min="0" max="200" value="100">
                    </div>

                    <!-- PRESET FILTERS -->
                    <label class="small fw-bold text-muted mb-2">Preset Filters</label>
                    <div class="row g-2 mb-4">
                        <div class="col-4"><button class="btn btn-light w-100 py-2 small fw-bold" onclick="window.applyPreset('grayscale(100%)')">B & W</button></div>
                        <div class="col-4"><button class="btn btn-light w-100 py-2 small fw-bold" onclick="window.applyPreset('sepia(100%)')">Sepia</button></div>
                        <div class="col-4"><button class="btn btn-light w-100 py-2 small fw-bold" onclick="window.applyPreset('invert(100%)')">Invert</button></div>
                    </div>

                    <button id="btnAction" class="btn btn-lg w-100 text-white rounded-pill py-3 fw-bold shadow-sm border-0 mb-4" style={`background: ${entry.data.color}`}>
                        Save & Download
                    </button>

                    <div class="related-tools-mini pt-3 border-top">
                        <p class="small fw-bold text-muted mb-3 uppercase">Other Tools</p>
                        <div class="row g-2">
                            {relatedTools.map(t => (
                                <div class="col-6">
                                    <a href={`/${t.slug || t.id}`} class="text-decoration-none small text-dark d-flex align-items-center p-2 border rounded-3 bg-light-hover transition">
                                        <i class={`fa-solid ${t.data.icon} me-2`} style={`color: ${t.data.color}`}></i>
                                        <span class="text-truncate">{t.data.title.split(' ')[0]}</span>
                                    </a>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- STEP 3: RESULT -->
    <div id="resultArea" style="display:none;" class="text-center py-5 fade-in">
        <div class="result-card card bg-white mx-auto shadow-lg p-5 rounded-5 border-0" style="max-width: 650px;">
            <div class="success-badge mb-4"><i class="fa-solid fa-wand-sparkles"></i></div>
            <h2 class="fw-black mb-3">Photo Enhanced!</h2>
            <p class="text-muted mb-4">Your edited image is ready for high-resolution download.</p>

            <div class="d-flex gap-2 flex-wrap justify-content-center pt-2">
                <a id="downloadBtn" class="btn btn-dark px-4 py-2 rounded-pill fw-bold shadow-sm d-flex align-items-center">
                    <i class="fa-solid fa-download me-2"></i> Download Image
                </a>
                <button class="btn btn-outline-secondary px-4 py-2 rounded-pill border-2 fw-bold d-flex align-items-center" onclick="location.reload()">
                    <i class="fa-solid fa-rotate-left me-2"></i> Edit Another
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .uploader-card { border-radius: 30px; border: 1px solid #eee; }
    .uploader-zone { border: 2px dashed #e2e8f0; border-radius: 24px; padding: 60px 20px; transition: 0.3s; }
    .uploader-zone:hover { background: #f8fbff; border-color: #4B90FF; }
    .preview-stage { min-height: 450px; display: flex; align-items: center; justify-content: center; border: 1px solid #f0f0f0; background: #ffffff; }
    .main-preview-img { max-height: 60vh; border-radius: 4px; box-shadow: 0 15px 45px rgba(0,0,0,0.1); }
    .bg-light-hover:hover { background: #f8f9fa; border-color: #4B90FF !important; }
    .success-badge { width: 60px; height: 60px; background: #f5f3ff; color: #7c3aed; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto; font-size: 1.8rem; }
    .fs-xs { font-size: 0.75rem; }
</style>

<script is:inline>
    const fileInput = document.getElementById('fileInput');
    const uploadContainer = document.getElementById('uploadContainer');
    const processingArea = document.getElementById('processingArea');
    const btnAction = document.getElementById('btnAction');
    const resultArea = document.getElementById('resultArea');
    const mainPreview = document.getElementById('mainPreview');
    const internalLoader = document.getElementById('internalLoader');
    
    // Adjustment Inputs
    const sliders = {
        bright: document.getElementById('in-bright'),
        contrast: document.getElementById('in-contrast'),
        saturate: document.getElementById('in-saturate')
    };

    let activePreset = '';

    // --- LIVE PREVIEW REFRESH ---
    function updatePreview() {
        const filterStr = `brightness(${sliders.bright.value}%) contrast(${sliders.contrast.value}%) saturate(${sliders.saturate.value}%) ${activePreset}`;
        mainPreview.style.filter = filterStr;
        
        // Update Labels
        document.getElementById('val-bright').innerText = sliders.bright.value + '%';
        document.getElementById('val-contrast').innerText = sliders.contrast.value + '%';
        document.getElementById('val-saturate').innerText = sliders.saturate.value + '%';
    }

    // Global: Apply Presets
    window.applyPreset = (filter) => {
        activePreset = filter;
        updatePreview();
    };

    // Global: Reset
    window.resetFilters = () => {
        sliders.bright.value = 100;
        sliders.contrast.value = 100;
        sliders.saturate.value = 100;
        activePreset = '';
        updatePreview();
    };

    // Attach Listeners
    Object.values(sliders).forEach(s => s.addEventListener('input', updatePreview));

    fileInput.addEventListener('change', (e) => {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = (ev) => {
                mainPreview.src = ev.target.result;
                uploadContainer.style.display = 'none';
                processingArea.style.display = 'block';
            };
            reader.readAsDataURL(file);
        }
    });

    btnAction.addEventListener('click', async () => {
        internalLoader.classList.remove('d-none');
        btnAction.disabled = true;

        try {
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            const img = new Image();
            img.src = mainPreview.src;
            
            await new Promise(r => img.onload = r);
            
            canvas.width = img.width;
            canvas.height = img.height;

            // Apply the same filters to the Canvas render
            const filterStr = `brightness(${sliders.bright.value}%) contrast(${sliders.contrast.value}%) saturate(${sliders.saturate.value}%) ${activePreset}`;
            ctx.filter = filterStr;
            ctx.drawImage(img, 0, 0);

            canvas.toBlob((blob) => {
                const url = URL.createObjectURL(blob);
                const dlBtn = document.getElementById('downloadBtn');
                dlBtn.href = url;
                dlBtn.download = `edited-zyntool-${Date.now()}.png`;
                
                setTimeout(() => {
                    processingArea.style.display = 'none';
                    resultArea.style.display = 'block';
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                }, 800);
            }, 'image/png');

        } catch (e) {
            alert("Editing failed.");
            internalLoader.classList.add('d-none');
            btnAction.disabled = false;
        }
    });
</script>
