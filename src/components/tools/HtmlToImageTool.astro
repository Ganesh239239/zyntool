---
const { entry, relatedTools } = Astro.props;
---

<div id="html-to-image-tool">
    <!-- STEP 1: CODE INPUT BOX -->
    <div id="uploadContainer" class="uploader-card shadow-lg p-4 mb-5 bg-white border">
        <div class="p-2 text-start">
            <div class="d-flex align-items-center mb-3">
                <div class="icon-circle me-3" style={`background: ${entry.data.color}15; color: ${entry.data.color}; width:50px; height:50px; border-radius:12px; display:flex; align-items:center; justify-content:center;`}>
                    <i class="fa-solid fa-code fa-lg"></i>
                </div>
                <div>
                    <h4 class="fw-bold m-0">HTML to Image</h4>
                    <p class="text-muted small m-0">Paste your code below to generate an image.</p>
                </div>
            </div>

            <div class="mb-3">
                <label class="extra-small fw-bold text-muted mb-1 uppercase">HTML CODE</label>
                <textarea id="htmlInput" class="form-control font-monospace fs-7 bg-light border-0" rows="5" placeholder="<div style='background: linear-gradient(45deg, #f06, #4a9); color: white; padding: 40px; border-radius: 15px; font-family: sans-serif; text-align: center;'>
  <h1>Hello ZynTool!</h1>
  <p>This image was generated from HTML.</p>
</div>"></textarea>
            </div>

            <button class="btn btn-lg w-100 text-white rounded-pill fw-bold shadow-sm" style={`background: ${entry.data.color}`} onclick="window.previewHtmlCode()">
                <i class="fa-solid fa-eye me-2"></i> Preview & Render
            </button>
        </div>
    </div>

    <!-- STEP 2: WORKSPACE -->
    <div id="processingArea" style="display:none;" class="fade-in">
        <div class="row g-4 text-start">
            <div class="col-lg-8">
                <div class="preview-stage border bg-white rounded-4 overflow-hidden position-relative p-4">
                    <!-- The Render Target -->
                    <div id="htmlCanvasTarget" style="display: inline-block; margin: 0 auto;"></div>
                    
                    <div id="internalLoader" class="loader-overlay d-none position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75 d-flex flex-column align-items-center justify-content-center text-white z-3">
                        <div class="spinner-border text-primary mb-3"></div>
                        <h5 class="fw-bold">Generating Image...</h5>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="options-card card p-4 border-0 shadow-sm rounded-4 bg-white sticky-top" style="top: 100px;">
                    <h5 class="fw-bold mb-4">Export Options</h5>
                    
                    <div class="mb-4">
                        <label class="small fw-bold text-muted mb-2">Image Format</label>
                        <select id="imgFormat" class="form-select border-light shadow-sm">
                            <option value="image/png">PNG (Transparent Background)</option>
                            <option value="image/jpeg">JPG (Best for Web)</option>
                        </select>
                    </div>

                    <button id="btnAction" class="btn btn-lg w-100 text-white rounded-pill py-3 fw-bold shadow-sm border-0 mb-4" style={`background: ${entry.data.color}`}>
                        Capture Image
                    </button>

                    <div class="related-tools-mini pt-3 border-top">
                        <p class="small fw-bold text-muted mb-3 uppercase">Other Tools</p>
                        <div class="row g-2">
                            {relatedTools.map(t => (
                                <div class="col-6">
                                    <a href={`/${t.slug || t.id}`} class="text-decoration-none small text-dark d-flex align-items-center p-2 border rounded-3 bg-light-hover transition">
                                        <i class={`fa-solid ${t.data.icon} me-2`} style={`color: ${t.data.color}`}></i>
                                        <span class="text-truncate">{t.data.title.split(' ')[0]}</span>
                                    </a>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- STEP 3: RESULT -->
    <div id="resultArea" style="display:none;" class="text-center py-5 fade-in">
        <div class="result-card card bg-white mx-auto shadow-lg p-5 rounded-5 border-0" style="max-width: 600px;">
            <div class="success-badge mb-4"><i class="fa-solid fa-camera-retro"></i></div>
            <h2 class="fw-black mb-3">Snapshot Ready!</h2>
            <p class="text-muted mb-4">Your HTML has been converted into a high-quality image file.</p>

            <div class="d-flex gap-2 flex-wrap justify-content-center pt-2">
                <a id="downloadBtn" class="btn btn-dark px-4 py-2 rounded-pill fw-bold shadow-sm d-flex align-items-center">
                    <i class="fa-solid fa-download me-2"></i> Download Now
                </a>
                <button class="btn btn-outline-secondary px-4 py-2 rounded-pill border-2 fw-bold d-flex align-items-center" onclick="location.reload()">
                    <i class="fa-solid fa-rotate-left me-2"></i> Create Another
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .uploader-card { border-radius: 24px; border: 1px solid #eee; }
    .preview-stage { min-height: 400px; display: flex; align-items: center; justify-content: center; border: 1px solid #f0f0f0; background: #f8f9fa; }
    .bg-light-hover:hover { background: #f8f9fa; border-color: #4B90FF !important; }
    .success-badge { width: 60px; height: 60px; background: #f3e8ff; color: #9333ea; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto; font-size: 1.8rem; }
    .extra-small { font-size: 0.7rem; letter-spacing: 0.05em; }
    .fs-7 { font-size: 0.85rem; }
</style>

<script is:inline>
    const uploadContainer = document.getElementById('uploadContainer');
    const processingArea = document.getElementById('processingArea');
    const btnAction = document.getElementById('btnAction');
    const resultArea = document.getElementById('resultArea');
    const internalLoader = document.getElementById('internalLoader');
    const htmlInput = document.getElementById('htmlInput');
    const target = document.getElementById('htmlCanvasTarget');

    // --- PREVIEW LOGIC ---
    window.previewHtmlCode = () => {
        const code = htmlInput.value;
        if (!code.trim()) return alert("Please enter some HTML code first!");

        target.innerHTML = code;
        uploadContainer.style.display = 'none';
        processingArea.style.display = 'block';
    };

    // --- CAPTURE LOGIC ---
    btnAction.addEventListener('click', async () => {
        internalLoader.classList.remove('d-none');
        btnAction.disabled = true;

        try {
            const format = document.getElementById('imgFormat').value;
            
            // Capture the target DIV using html2canvas
            const canvas = await html2canvas(target, {
                backgroundColor: format === 'image/jpeg' ? '#ffffff' : null,
                scale: 2, // High DPI capture
                useCORS: true
            });

            canvas.toBlob((blob) => {
                const url = URL.createObjectURL(blob);
                const dlBtn = document.getElementById('downloadBtn');
                dlBtn.href = url;
                dlBtn.download = `html-snapshot-${Date.now()}.${format === 'image/png' ? 'png' : 'jpg'}`;
                
                setTimeout(() => {
                    processingArea.style.display = 'none';
                    resultArea.style.display = 'block';
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                }, 800);
            }, format, 0.95);

        } catch (e) {
            alert("Rendering failed. Please check your HTML code for errors.");
            console.error(e);
            internalLoader.classList.add('d-none');
            btnAction.disabled = false;
        }
    });
</script>
