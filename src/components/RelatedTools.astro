---
const {
  relatedTools = [],
  title = "Other Image Tools"
} = Astro.props;

if (!relatedTools.length) return;
---

<div class="card p-4 border-0 shadow-sm rounded-4 bg-light mt-4">
  <h6 class="fw-bold mb-3 text-dark">{title}</h6>

  <div class="row g-2">
    {relatedTools.map(t => (
      <div class="col-6">
        <a
          href={`/${t.slug || t.id}`}
          class="text-decoration-none small text-muted d-flex align-items-center p-2 bg-white rounded-3 border hover-blue"
        >
          <i
            class={`fa-solid ${t.data.icon} me-2`}
            style={`color:${t.data.color}`}
          ></i>
          <span class="text-truncate">
            {t.data.title.split(' ')[0]}
          </span>
        </a>
      </div>
    ))}
  </div>
</div>
